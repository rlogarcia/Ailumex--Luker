<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_city_admin_list" model="ir.ui.view">
            <field name="name">res.city.list</field>
            <field name="model">res.city</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <list string="Ciudades">
                    <field name="state_id" string="Departamento" />
                    <field name="name" />
                    <field name="cod_ciudad" />
                </list>
            </field>
        </record>

        <record id="res_city_form" model="ir.ui.view">
            <field name="name">res.city.form</field>
            <field name="model">res.city</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Ciudades">
                    <sheet>
                        <group>
                            <group>
                                <field name="state_id" string="Departamento" />
                                <field name="name" />
                                <field name="cod_ciudad" />
                                <field name="image" string="Imagen"/>
                                <field name="image_2" string="Imagen 2"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_res_city_filter" model="ir.ui.view">
            <field name="name">res.city.select</field>
            <field name="model">res.city</field>
            <field name="arch" type="xml">
                <search string="Search City">
                    <field name="name" filter_domain="['|', ('name', 'ilike', self), ('cod_ciudad', 'ilike', self)]" />
                </search>
            </field>
        </record>

        <record id="action_res_city_menu" model="ir.actions.act_window">
            <field name="name">Ciudades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.city</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear nueva ciudad!
                </p>
                <p>
                    No message...
                </p>
            </field>
        </record>

        
    </data>
</odoo>
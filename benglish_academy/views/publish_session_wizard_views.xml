<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_publish_session_wizard_form" model="ir.ui.view">
            <field name="name">benglish.publish.session.wizard.form</field>
            <field name="model">benglish.publish.session.wizard</field>
            <field name="arch" type="xml">
                <form string="Publicar Clase por Tipo">
                    <sheet>
                        <div class="alert alert-info" role="alert">
                            <p>
                                <strong>üìã Publicar Clase por Tipo</strong><br /> Este asistente
                                crea una nueva sesi√≥n acad√©mica con configuraci√≥n personalizada.<br />
                                <strong>
                                Importante:</strong> Valida todos los campos obligatorios seg√∫n la
                                modalidad seleccionada. </p>
                        </div>

                        <group>
                            <group string="Configuraci√≥n B√°sica">
                                <field name="agenda_id" required="1" />
                                <field name="campus_id" readonly="1" />
                                <field name="program_id" required="1" />
                                <field name="subject_id" required="1"
                                    domain="[('active', '=', True)]"
                                    options="{'no_create': True}" />
                            </group>
                            <group string="Audiencia">
                                <field name="audience_phase_id" />
                                <field name="audience_unit_from" />
                                <field name="audience_unit_to" />
                            </group>
                        </group>

                        <group>
                            <group string="Programaci√≥n">
                                <field name="date" required="1" />
                                <field name="time_start" widget="float_time" required="1" />
                                <field name="time_end" widget="float_time" required="1" />
                                <field name="session_type" required="1" />
                            </group>
                            <group string="Modalidad y Recursos">
                                <field name="delivery_mode" widget="radio" required="1" />

                                <!-- Aula: Obligatoria para presencial/h√≠brida -->
                                <field name="subcampus_id"
                                    required="delivery_mode in ('presential', 'hybrid')"
                                    invisible="delivery_mode == 'virtual'" />

                                <div class="alert alert-warning" role="alert"
                                    invisible="delivery_mode not in ('presential', 'hybrid') or subcampus_id">
                                    <p>‚ö†Ô∏è <strong>Aula requerida</strong><br /> Debes seleccionar un
                                        aula para modalidad presencial o h√≠brida.</p>
                                </div>

                                <field name="teacher_id" required="1" />

                                <!-- Enlace de reuni√≥n: Obligatorio para virtual/h√≠brida -->
                                <field name="meeting_link"
                                    placeholder="https://meet.google.com/xxx-xxxx-xxx"
                                    invisible="delivery_mode == 'presential'" />

                                <div class="alert alert-warning" role="alert"
                                    invisible="delivery_mode not in ('virtual', 'hybrid') or meeting_link">
                                    <p>‚ö†Ô∏è <strong>Enlace de reuni√≥n requerido</strong><br /> Debes
                                        proporcionar un enlace de reuni√≥n para modalidad virtual o
                                        h√≠brida.<br /> El sistema puede autocompletarlo desde el
                                        docente si tiene uno configurado.</p>
                                </div>

                                <field name="max_capacity" required="1" />
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button name="action_publish"
                            string="‚úÖ Crear Sesi√≥n"
                            type="object"
                            class="btn-primary" />
                        <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_publish_session_wizard" model="ir.actions.act_window">
            <field name="name">Publicar Clase por Tipo</field>
            <field name="res_model">benglish.publish.session.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
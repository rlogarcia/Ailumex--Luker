<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- VISTAS: ELECTIVE POOL (FASE 2) -->
    <!-- ========================================== -->

    <!-- Vista de árbol (lista) -->
    <record id="view_elective_pool_tree" model="ir.ui.view">
        <field name="name">benglish.elective.pool.tree</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <list string="Pools de Electivas">
                <field name="code" />
                <field name="name" />
                <field name="is_evaluable" widget="boolean_toggle" />
                <field name="count_value" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_elective_pool_form" model="ir.ui.view">
        <field name="name">benglish.elective.pool.form</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <form string="Pool de Electivas">
                <sheet>
                    <group>
                        <group>
                            <div class="oe_title">
                                <field name="code" readonly="1" />
                            </div>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <div class="oe_title">
                                <label for="name" string="Nombre del Pool" />
                                <h2>
                                    <field name="name" placeholder="ej: Electivas Básico 2025-1" />
                                </h2>
                            </div>
                        </group>
                        <group>
                            <div>
                                <label for="alias" />
                                <h2>
                                    <field name="alias" placeholder="ej: Electivas Básico" />
                                </h2>
                            </div>
                        </group>
                    </group>

                    <group>
                        <group name="basic_info" string="Información Básica">
                            <field name="sequence" />
                            <field name="count_value" />
                            <field name="is_evaluable" />
                        </group>
                        <group name="period_info" string="Período de Vigencia">
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>

                    <notebook>
                        <page name="description" string="Descripción">
                            <field name="description" nolabel="1"
                                placeholder="Descripción detallada del pool y sus electivas..." />
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_elective_pool_kanban" model="ir.ui.view">
        <field name="name">benglish.elective.pool.kanban</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="code" />
                <field name="is_evaluable" />
                <field name="active" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name" />
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <t t-if="record.is_evaluable.raw_value">
                                    <i class="fa fa-check-circle" /> Evaluable </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_elective_pool_search" model="ir.ui.view">
        <field name="name">benglish.elective.pool.search</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <search string="Buscar Pools de Electivas">
                <field name="name" />
                <field name="code" />
                <separator />
                <filter string="Evaluables" name="filter_evaluable"
                    domain="[('is_evaluable', '=', True)]" />
                <filter string="No Evaluables" name="filter_not_evaluable"
                    domain="[('is_evaluable', '=', False)]" />
                <separator />
                <filter string="Archivados" name="filter_inactive" domain="[('active', '=', False)]" />
                <group expand="0" string="Agrupar por">
                    <filter string="Evaluable" name="group_evaluable"
                        context="{'group_by': 'is_evaluable'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_elective_pool" model="ir.actions.act_window">
        <field name="name">Pools de Electivas</field>
        <field name="res_model">benglish.elective.pool</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer pool de electivas
            </p>
            <p>
                Los pools de electivas permiten crear asignaturas electivas propias.
                Estas asignaturas no tienen tipo asignado y pueden marcarse como evaluables.
                Cuando un Tipo de Asignatura tenga "Pool de Electivas" activado,
                el sistema mostrará estas asignaturas como opciones válidas.
            </p>
        </field>
    </record>


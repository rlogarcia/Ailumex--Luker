<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- VISTAS: ELECTIVE POOL (FASE 2) -->
    <!-- ========================================== -->

    <!-- Vista de árbol (lista) -->
    <record id="view_elective_pool_tree" model="ir.ui.view">
        <field name="name">benglish.elective.pool.tree</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <list string="Pools de Electivas">
                <field name="code" />
                <field name="name" />
                <field name="phase_id" />
                <field name="program_id" />
                <field name="subject_count" />
                <field name="count_value" />
                <field name="state" widget="badge" decoration-success="state=='active'"
                    decoration-info="state=='draft'" decoration-muted="state=='closed'" />
                <field name="active" invisible="1" />
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_elective_pool_form" model="ir.ui.view">
        <field name="name">benglish.elective.pool.form</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <form string="Pool de Electivas">
                <header>
                    <button name="action_activate_pool" string="Activar Pool" type="object"
                        class="btn-primary" invisible="state != 'draft'" />
                    <button name="action_close_pool" string="Cerrar Pool" type="object"
                        invisible="state != 'active'" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_subjects" type="object" class="oe_stat_button"
                            icon="fa-book" invisible="subject_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="subject_count" />
                                </span>
                                <span class="o_stat_text">Asignaturas</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <div class="oe_title">
                                <label for="name" string="Nombre del Pool" />
                                <h2>
                                    <field name="name" placeholder="ej: Electivas Básico 2025-1" />
                                </h2>
                                <div>
                                    <field name="code" readonly="1" />
                                </div>
                            </div>
                        </group>
                        <group>
                            <div>
                                <label for="alias" />
                                <h2>
                                    <field name="alias" placeholder="ej: Electivas Básico" />
                                </h2>
                            </div>
                        </group>
                    </group>

                    <group>
                        <group name="basic_info" string="Información Básica">
                            <field name="phase_id" options="{'no_create': True}" />
                            <field name="program_id" readonly="1" />
                            <field name="sequence" />
                            <field name="count_value" />
                        </group>
                        <group name="period_info" string="Periodo de Vigencia">
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>

                    <group name="description">
                        <field name="description"
                            placeholder="Descripción detallada del pool y sus electivas..." />
                    </group>

                    <notebook>
                        <page name="subjects" string="Asignaturas Electivas">
                            <field name="phase_id" invisible="1" />
                            <field name="subject_ids" widget="many2many"
                                domain="[('phase_id', '=', phase_id), ('active', '=', True)]"
                                context="{'default_subject_type': 'elective'}">
                                <list>
                                    <field name="name" />
                                    <field name="code" />
                                    <field name="level_id" />
                                    <field name="phase_id" />
                                    <field name="subject_type" />
                                    <field name="hours" />
                                    <field name="credits" />
                                    <field name="active" invisible="1" />
                                </list>
                            </field>
                        </page>
                        <page name="stats" string="Estadísticas">
                            <group>
                                <group>
                                    <field name="pool_summary" readonly="1" />
                                    <field name="subject_count" readonly="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_elective_pool_kanban" model="ir.ui.view">
        <field name="name">benglish.elective.pool.kanban</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="code" />
                <field name="phase_id" />
                <field name="subject_count" />
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name" />
                                    </strong>
                                </div>
                                <span class="badge"
                                    t-att-class="record.state.raw_value === 'active' ? 'bg-success' : record.state.raw_value === 'draft' ? 'bg-info' : 'bg-secondary'">
                                    <field name="state" />
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="phase_id" />
                                <br />
                                <t t-if="record.subject_count.value > 0">
                                    <i class="fa fa-book" /> <field name="subject_count" />
                                    asignatura(s) </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_elective_pool_search" model="ir.ui.view">
        <field name="name">benglish.elective.pool.search</field>
        <field name="model">benglish.elective.pool</field>
        <field name="arch" type="xml">
            <search string="Buscar Pools de Electivas">
                <field name="name" />
                <field name="code" />
                <field name="phase_id" />
                <field name="program_id" />
                <separator />
                <filter string="Activos" name="filter_state_active"
                    domain="[('state', '=', 'active')]" />
                <filter string="Borrador" name="filter_state_draft"
                    domain="[('state', '=', 'draft')]" />
                <filter string="Cerrados" name="filter_state_closed"
                    domain="[('state', '=', 'closed')]" />
                <separator />
                <filter string="Con Asignaturas" name="filter_with_subjects"
                    domain="[('subject_count', '>', 0)]" />
                <filter string="Sin Asignaturas" name="filter_no_subjects"
                    domain="[('subject_count', '=', 0)]" />
                <separator />
                <filter string="Archivados" name="filter_inactive" domain="[('active', '=', False)]" />
                <group expand="0" string="Agrupar por">
                    <filter string="Fase" name="group_phase" context="{'group_by': 'phase_id'}" />
                    <filter string="Programa" name="group_program"
                        context="{'group_by': 'program_id'}" />
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_elective_pool" model="ir.actions.act_window">
        <field name="name">Pools de Electivas</field>
        <field name="res_model">benglish.elective.pool</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_filter_state_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer pool de electivas
            </p>
            <p>
                Los pools de electivas agrupan asignaturas electivas ofertadas para una fase
                específica,
                permitiendo configurar qué asignaturas electivas están disponibles según el nivel
                académico.
            </p>
        </field>
    </record>


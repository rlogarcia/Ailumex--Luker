        <!-- Vista de B√∫squeda de Sub-sedes -->
        <record id="view_benglish_subcampus_search" model="ir.ui.view">
            <field name="name">benglish.subcampus.search</field>
            <field name="model">benglish.subcampus</field>
            <field name="arch" type="xml">
                <search string="Buscar Sub-sedes">
                    <field name="name" string="Aula"
                        filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" />
                    <field name="code" />
                    <field name="campus_id" />
                    <field name="building" />
                    <field name="floor" />
                    <separator />
                    <filter string="Activos" name="active" domain="[('active', '=', True)]" />
                    <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
                    <separator />
                    <filter string="Disponibles" name="available"
                        domain="[('is_available', '=', True)]" />
                    <filter string="No Disponibles" name="unavailable"
                        domain="[('is_available', '=', False)]" />
                    <separator />
                    <filter string="Aulas F√≠sicas" name="classroom"
                        domain="[('subcampus_type', '=', 'classroom')]" />
                    <filter string="Laboratorios" name="lab"
                        domain="[('subcampus_type', '=', 'lab')]" />
                    <filter string="Salas Virtuales" name="virtual"
                        domain="[('subcampus_type', '=', 'virtual')]" />
                    <separator />
                    <filter string="Con Proyector" name="with_projector"
                        domain="[('has_projector', '=', True)]" />
                    <filter string="Con Computador" name="with_computer"
                        domain="[('has_computer', '=', True)]" />
                    <filter string="Con Internet" name="with_internet"
                        domain="[('has_internet', '=', True)]" />
                    <filter string="Con Sistema de Audio" name="with_audio"
                        domain="[('has_audio_system', '=', True)]" />
                    <filter string="Con Aire Acondicionado" name="with_ac"
                        domain="[('has_air_conditioning', '=', True)]" />
                    <group expand="0" string="Agrupar por">
                        <filter string="Sede" name="group_by_campus"
                            context="{'group_by': 'campus_id'}" />
                        <filter string="Tipo" name="group_by_type"
                            context="{'group_by': 'subcampus_type'}" />
                        <filter string="Edificio" name="group_by_building"
                            context="{'group_by': 'building'}" />
                        <filter string="Piso" name="group_by_floor"
                            context="{'group_by': 'floor'}" />
                        <filter string="Disponibilidad" name="group_by_availability"
                            context="{'group_by': 'is_available'}" />
                    </group>
                </search>
            </field>
        </record>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- VISTAS PARA SESSION ENROLLMENT -->
        <!-- ========================================== -->

        <!-- Vista List -->
        <record id="view_session_enrollment_list" model="ir.ui.view">
            <field name="name">benglish.session.enrollment.list</field>
            <field name="model">benglish.session.enrollment</field>
            <field name="arch" type="xml">
                <list string="Inscripciones" decoration-success="state == 'attended'"
                    decoration-danger="state == 'absent'" decoration-muted="state == 'cancelled'"
                    decoration-info="state == 'confirmed'">
                    <field name="student_id" />
                    <field name="student_email" />
                    <field name="session_date" />
                    <field name="session_time_start" widget="float_time" />
                    <field name="subject_id" />
                    <field name="effective_subject_id" />
                    <field name="student_alias" />
                    <field name="campus_id" />
                    <field name="enrollment_date" />
                    <field name="enrolled_by_id" />
                    <field name="state" />
                </list>
            </field>
        </record>

        <!-- Vista Form -->
        <record id="view_session_enrollment_form" model="ir.ui.view">
            <field name="name">benglish.session.enrollment.form</field>
            <field name="model">benglish.session.enrollment</field>
            <field name="arch" type="xml">
                <form string="Inscripción de Estudiante">
                    <header>
                        <button name="action_confirm" string="Confirmar Inscripción" type="object"
                            invisible="state != 'pending'" class="btn-primary"
                            groups="benglish_academy.group_academic_coordinator,benglish_academy.group_academic_manager" />
                        <button name="action_mark_attended" string="Marcar Asistencia" type="object"
                            invisible="state != 'confirmed'" class="btn-success"
                            groups="benglish_academy.group_academic_teacher,benglish_academy.group_academic_coordinator,benglish_academy.group_academic_manager" />
                        <button name="action_mark_absent" string="Marcar Ausencia" type="object"
                            invisible="state != 'confirmed'" class="btn-warning"
                            groups="benglish_academy.group_academic_teacher,benglish_academy.group_academic_coordinator,benglish_academy.group_academic_manager" />
                        <button name="action_cancel" string="Cancelar Inscripción" type="object"
                            invisible="state not in ('pending', 'confirmed')" class="btn-danger"
                            groups="benglish_academy.group_academic_coordinator,benglish_academy.group_academic_manager" />
                        <button name="action_reopen" string="Reabrir" type="object"
                            invisible="state != 'cancelled'" class="btn-info"
                            groups="benglish_academy.group_academic_manager" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="pending,confirmed,attended" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_session" type="object" class="oe_stat_button"
                                icon="fa-calendar">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Ver Sesión</span>
                                </div>
                            </button>
                            <button name="action_view_student" type="object" class="oe_stat_button"
                                icon="fa-user">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Ver Estudiante</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Cancelada" bg_color="bg-danger"
                            invisible="state != 'cancelled'" />
                        <widget name="web_ribbon" title="Asistió" bg_color="bg-success"
                            invisible="state != 'attended'" />
                        <widget name="web_ribbon" title="Ausente" bg_color="bg-warning"
                            invisible="state != 'absent'" />
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group string="Estudiante">
                                <field name="student_id" required="1" options="{'no_create': True}" />
                                <field name="student_name" readonly="1" />
                                <field name="student_email" readonly="1" />
                            </group>
                            <group string="Sesión">
                                <field name="session_id" required="1"
                                    domain="[('state', 'in', ['draft', 'published'])]"
                                    options="{'no_create': True}" />
                                <field name="session_date" readonly="1" />
                                <field name="session_time_start" widget="float_time" readonly="1" />
                                <field name="session_state" readonly="1" />
                            </group>
                        </group>
                        <group>
                            <group string="Información Académica">
                                <field name="subject_id" readonly="1" />
                                <field name="effective_subject_id" readonly="1" />
                                <field name="student_alias" readonly="1" />
                                <field name="program_id" readonly="1" />
                                <field name="campus_id" readonly="1" />
                            </group>
                            <group string="Control de Inscripción">
                                <field name="enrollment_date" readonly="1" />
                                <field name="enrolled_by_id" readonly="1" />
                            </group>
                        </group>
                        <group string="Notas">
                            <field name="notes" nolabel="1"
                                placeholder="Observaciones sobre la inscripción..." />
                        </group>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Vista Search -->
        <record id="view_session_enrollment_search" model="ir.ui.view">
            <field name="name">benglish.session.enrollment.search</field>
            <field name="model">benglish.session.enrollment</field>
            <field name="arch" type="xml">
                <search string="Buscar Inscripciones">
                    <field name="student_id" string="Estudiante"
                        filter_domain="['|', ('student_id.name', 'ilike', self), ('student_id.code', 'ilike', self)]" />
                    <field name="session_id" />
                    <field name="subject_id" />
                    <field name="effective_subject_id" />
                    <field name="campus_id" />
                    <filter name="filter_confirmed" string="Confirmadas"
                        domain="[('state', '=', 'confirmed')]" />
                    <filter name="filter_pending" string="Pendientes"
                        domain="[('state', '=', 'pending')]" />
                    <filter name="filter_attended" string="Asistió"
                        domain="[('state', '=', 'attended')]" />
                    <filter name="filter_absent" string="Ausente"
                        domain="[('state', '=', 'absent')]" />
                    <filter name="filter_cancelled" string="Canceladas"
                        domain="[('state', '=', 'cancelled')]" />
                    <separator />
                    <filter name="filter_today" string="Hoy"
                        domain="[('session_date', '=', context_today().strftime('%Y-%m-%d'))]" />
                    <filter name="filter_this_week" string="Esta Semana"
                        domain="[('session_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('session_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]" />
                    <group expand="0" string="Agrupar por">
                        <filter name="group_student" string="Estudiante"
                            context="{'group_by': 'student_id'}" />
                        <filter name="group_session" string="Sesión"
                            context="{'group_by': 'session_id'}" />
                        <filter name="group_effective_subject" string="Asignatura Efectiva"
                            context="{'group_by': 'effective_subject_id'}" />
                        <filter name="group_subject" string="Asignatura"
                            context="{'group_by': 'subject_id'}" />
                        <filter name="group_campus" string="Sede"
                            context="{'group_by': 'campus_id'}" />
                        <filter name="group_date" string="Fecha"
                            context="{'group_by': 'session_date'}" />
                        <filter name="group_state" string="Estado" context="{'group_by': 'state'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Vista Pivot -->
        <record id="view_session_enrollment_pivot" model="ir.ui.view">
            <field name="name">benglish.session.enrollment.pivot</field>
            <field name="model">benglish.session.enrollment</field>
            <field name="arch" type="xml">
                <pivot string="Análisis de Inscripciones">
                    <field name="session_date" interval="week" type="row" />
                    <field name="state" type="col" />
                </pivot>
            </field>
        </record>

        <!-- Acción Window -->
        <record id="action_session_enrollment" model="ir.actions.act_window">
            <field name="name">Inscripciones de Sesiones</field>
            <field name="res_model">benglish.session.enrollment</field>
            <field name="view_mode">list,form,pivot</field>
            <field name="context">{'search_default_filter_confirmed': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay inscripciones registradas
                </p>
                <p> Las inscripciones vinculan estudiantes con sesiones de clase.<br /> Gestiona
                    confirmaciones, asistencias y ausencias desde aquí. </p>
            </field>
        </record>

    </data>
</odoo>

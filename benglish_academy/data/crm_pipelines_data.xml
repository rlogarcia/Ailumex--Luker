        <field name="fold">False</field>
        <field name="is_won">False</field>
    </record>

    <record id="stage_marketing_qualified" model="crm.stage">
        <field name="name">Calificado para Ventas</field>
        <field name="sequence">6</field>
        <field name="team_id" ref="crm_team_marketing" />
        <field name="fold">False</field>
        <field name="is_won">False</field>
    </record>

    <record id="stage_marketing_not_interested" model="crm.stage">
        <field name="name">No Interesado</field>
        <field name="sequence">90</field>
        <field name="team_id" ref="crm_team_marketing" />
        <field name="fold">True</field>
        <field name="is_won">False</field>
    </record>

    <!-- ========================================
         PIPELINE COMERCIAL
         ======================================== -->

    <!-- Equipo Comercial -->
    <record id="crm_team_sales" model="crm.team">
        <field name="name">Ventas / Comercial</field>
        <field name="sequence">2</field>
        <field name="use_leads">False</field>
        <field name="use_opportunities">True</field>
        <field name="company_id" ref="base.main_company" />
    </record>

    <!-- Etapas del Pipeline Comercial -->
    <record id="stage_sales_new_opportunity" model="crm.stage">
        <field name="name">Nueva Oportunidad</field>
        <field name="sequence">10</field>
        <field name="team_id" ref="crm_team_sales" />

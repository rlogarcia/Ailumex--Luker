<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción de Servidor: Sincronizar con Gestor de Contraseñas -->
    <record id="action_server_sync_password_manager" model="ir.actions.server">
        <field name="name">Sincronizar con Gestor de Contraseñas</field>
        <field name="model_id" ref="model_benglish_student"/>
        <field name="state">code</field>
        <field name="code">
# Sincronizar automáticamente con el gestor de contraseñas
password_manager = env['benglish.student.password.manager']
for student in records.filtered(lambda s: s.user_id):
    password_manager.sudo().get_or_create_for_student(student.id)
        </field>
    </record>

    <!-- Acción Automática: Sincronizar Gestor de Contraseñas al Crear Usuario Portal -->
    <record id="automation_sync_password_manager" model="base.automation">
        <field name="name">Sincronizar Gestor de Contraseñas de Estudiante</field>
        <field name="model_id" ref="model_benglish_student"/>
        <field name="active">True</field>
        <field name="trigger">on_create_or_write</field>
        <field name="filter_domain">[('user_id', '!=', False)]</field>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_server_sync_password_manager')])]"/>
    </record>
</odoo>

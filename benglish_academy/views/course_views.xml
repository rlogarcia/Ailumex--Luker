<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista list de Cursos -->
    <record id="view_course_list" model="ir.ui.view">
        <field name="name">benglish.course.list</field>
        <field name="model">benglish.course</field>
        <field name="arch" type="xml">
            <list string="Cursos" 
                  decoration-bf="state == 'in_progress'"
                  decoration-it="state == 'finished'"
                  decoration-danger="current_students &gt; max_students">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="subject_id"/>
                    <field name="level_id"/>
                    <field name="campus_id"/>
                    <field name="delivery_mode" widget="badge"
                           decoration-success="delivery_mode == 'presential'"
                           decoration-info="delivery_mode == 'virtual'"
                           decoration-warning="delivery_mode == 'hybrid'"/>
                    <field name="main_teacher_id" widget="many2one_avatar_user"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="group_count"/>
                    <field name="presential_capacity" optional="show"/>
                    <field name="online_capacity" optional="show"/>
                    <field name="current_students"/>
                    <field name="max_students"/>
                    <field name="state" widget="badge" 
                        decoration-info="state == 'draft'"
                        decoration-primary="state == 'scheduled'"
                        decoration-success="state == 'in_progress'"
                        decoration-muted="state == 'finished'"
                        decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Vista Form de Cursos -->
    <record id="view_course_form" model="ir.ui.view">
        <field name="name">benglish.course.form</field>
        <field name="model">benglish.course</field>
        <field name="arch" type="xml">
            <form string="Curso">
                <header>
                    <button name="action_schedule" type="object" string="Programar" 
                        class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Iniciar" 
                        class="oe_highlight" invisible="state != 'scheduled'"/>
                    <button name="action_finish" type="object" string="Finalizar" 
                        invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Cancelar" 
                        invisible="state in ('finished', 'cancelled')"/>
                    <button name="action_draft" type="object" string="Volver a Borrador" 
                        invisible="state not in ('scheduled', 'cancelled')"/>
                    <field name="state" widget="statusbar" 
                        statusbar_visible="draft,scheduled,in_progress,finished"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_groups" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="group_count" widget="statinfo" string="Grupos"/>
                        </button>
                        <button name="action_view_sessions" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                                <!-- contador de sesiones eliminado -->
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Cancelado" bg_color="text-bg-danger" 
                            invisible="state != 'cancelled'"/>
                    <widget name="web_ribbon" title="Finalizado" bg_color="text-bg-success" 
                            invisible="state != 'finished'"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre del curso"/>
                        </h1>
                        <div class="o_row">
                            <span class="badge text-bg-info"><i class="fa fa-barcode"/> <field name="code" placeholder="C贸digo"/></span>
                        </div>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="subject_id"/>
                            <field name="level_id"/>
                            <field name="phase_id"/>
                        </group>
                        <group name="delivery">
                            <field name="delivery_mode" widget="radio"/>
                            <field name="meeting_platform" invisible="delivery_mode == 'presential'"/>
                            <field name="meeting_link" widget="url" 
                                   invisible="delivery_mode == 'presential'"
                                   placeholder="https://meet.google.com/xxx-xxxx-xxx"/>
                        </group>
                    </group>
                    <group>
                        <group name="location">
                            <field name="campus_id"/>
                            <field name="subcampus_ids" widget="many2many_tags"
                                   invisible="delivery_mode == 'virtual'"/>
                        </group>
                        <group name="teachers">
                            <field name="main_teacher_id" widget="many2one_avatar_user"/>
                            <field name="assistant_teacher_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <group name="dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_hours"/>
                        </group>
                        <group name="capacity">
                            <field name="presential_capacity" readonly="1"
                                   invisible="delivery_mode == 'virtual'"/>
                            <field name="online_capacity" 
                                   invisible="delivery_mode == 'presential'"/>
                            <field name="max_students" readonly="1" string="Capacidad Total"/>
                            <field name="current_students" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group name="schedule_field">
                            <field name="schedule" placeholder="Descripci贸n del horario..."/>
                            <!-- campo de pr贸xima sesi贸n eliminado -->
                        </group>
                    </group>
                    <notebook>
                        <page string=" Grupos" name="groups">
                            <group>
                                <group string="Resumen de Grupos">
                                    <field name="group_count" readonly="1" string="Total de grupos"/>
                                    <label for="current_students" string="Estudiantes"/>
                                    <div class="o_row">
                                        <field name="current_students" readonly="1"/>
                                        <span> / </span>
                                        <field name="max_students" readonly="1"/>
                                    </div>
                                </group>
                            </group>
                            <field name="group_ids">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="subcampus_id"/>
                                    <field name="teacher_id" widget="many2one_avatar_user"/>
                                    <field name="current_students"/>
                                    <field name="total_capacity"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Descripci贸n" name="description">
                            <field name="description" placeholder="Descripci贸n del curso..."/>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Notas adicionales..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vista Kanban de Cursos -->
    <record id="view_course_kanban" model="ir.ui.view">
        <field name="name">benglish.course.kanban</field>
        <field name="model">benglish.course</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="code"/>
                <field name="name"/>
                <field name="subject_id"/>
                <field name="level_id"/>
                <field name="campus_id"/>
                <field name="main_teacher_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="current_students"/>
                <field name="max_students"/>
                <field name="group_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <i class="fa fa-book"/> <field name="name"/>
                                    </strong>
                                    <span class="badge text-bg-secondary"><field name="code"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-graduation-cap"/> <field name="subject_id"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-signal"/> <field name="level_id"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <i class="fa fa-building"/> <field name="campus_id"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <i class="fa fa-user"/> <field name="main_teacher_id"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <i class="fa fa-users"/> <field name="group_count"/> grupos
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-user-plus"/> <field name="current_students"/>/<field name="max_students"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <i class="fa fa-calendar"/> <field name="start_date"/> - <field name="end_date"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <field name="state" widget="badge" 
                                        decoration-info="state == 'draft'"
                                        decoration-primary="state == 'scheduled'"
                                        decoration-success="state == 'in_progress'"
                                        decoration-muted="state == 'finished'"
                                        decoration-danger="state == 'cancelled'"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search de Cursos -->
    <record id="view_course_search" model="ir.ui.view">
        <field name="name">benglish.course.search</field>
        <field name="model">benglish.course</field>
        <field name="arch" type="xml">
            <search string="Buscar Cursos">
                <field name="name"/>
                <field name="code"/>
                <field name="subject_id"/>
                <field name="campus_id"/>
                <field name="main_teacher_id"/>
                <separator/>
                <filter name="draft" string="Borrador" domain="[('state', '=', 'draft')]"/>
                <filter name="scheduled" string="Programado" domain="[('state', '=', 'scheduled')]"/>
                <filter name="in_progress" string="En Progreso" domain="[('state', '=', 'in_progress')]"/>
                <filter name="finished" string="Finalizado" domain="[('state', '=', 'finished')]"/>
                <separator/>
                <filter name="active" string="Activo" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactivo" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_by_campus" string="Sede" context="{'group_by': 'campus_id'}"/>
                    <filter name="group_by_subject" string="Asignatura" context="{'group_by': 'subject_id'}"/>
                    <filter name="group_by_level" string="Nivel" context="{'group_by': 'level_id'}"/>
                    <filter name="group_by_teacher" string="Docente" context="{'group_by': 'main_teacher_id'}"/>
                    <filter name="group_by_state" string="Estado" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acci贸n de ventana para Cursos -->
    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Cursos</field>
        <field name="res_model">benglish.course</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo Curso
            </p>
            <p>
                Los cursos representan instancias espec铆ficas de asignaturas que se dictan
                en un periodo determinado, en una sede espec铆fica, impartidos por docentes.
            </p>
        </field>
    </record>

</odoo>

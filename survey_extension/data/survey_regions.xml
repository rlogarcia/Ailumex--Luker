<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========================================
             Regiones Predefinidas de México
             Estas son regiones de ejemplo que pueden ser personalizadas
             ======================================== -->
        
        <!-- Región Norte -->
        <record id="region_norte" model="survey.region">
            <field name="name">Norte</field>
            <field name="code">NOR</field>
            <field name="description">Región Norte del país (incluye estados como Chihuahua, Coahuila, Nuevo León, etc.)</field>
            <field name="sequence">10</field>
            <field name="color">1</field>
            <field name="active">True</field>
        </record>

        <!-- Región Sur -->
        <record id="region_sur" model="survey.region">
            <field name="name">Sur</field>
            <field name="code">SUR</field>
            <field name="description">Región Sur del país (incluye estados como Chiapas, Oaxaca, Tabasco, etc.)</field>
            <field name="sequence">20</field>
            <field name="color">2</field>
            <field name="active">True</field>
        </record>

        <!-- Región Centro -->
        <record id="region_centro" model="survey.region">
            <field name="name">Centro</field>
            <field name="code">CEN</field>
            <field name="description">Región Centro del país (incluye CDMX, Estado de México, Puebla, etc.)</field>
            <field name="sequence">30</field>
            <field name="color">3</field>
            <field name="active">True</field>
        </record>

        <!-- Región Occidente -->
        <record id="region_occidente" model="survey.region">
            <field name="name">Occidente</field>
            <field name="code">OCC</field>
            <field name="description">Región Occidente del país (incluye Jalisco, Guanajuato, Michoacán, etc.)</field>
            <field name="sequence">40</field>
            <field name="color">4</field>
            <field name="active">True</field>
        </record>

        <!-- Región Noreste -->
        <record id="region_noreste" model="survey.region">
            <field name="name">Noreste</field>
            <field name="code">NE</field>
            <field name="description">Región Noreste del país (incluye Tamaulipas, San Luis Potosí, etc.)</field>
            <field name="sequence">50</field>
            <field name="color">5</field>
            <field name="active">True</field>
        </record>

        <!-- Región Noroeste -->
        <record id="region_noroeste" model="survey.region">
            <field name="name">Noroeste</field>
            <field name="code">NO</field>
            <field name="description">Región Noroeste del país (incluye Sonora, Sinaloa, Baja California, etc.)</field>
            <field name="sequence">60</field>
            <field name="color">6</field>
            <field name="active">True</field>
        </record>

        <!-- Región Sureste -->
        <record id="region_sureste" model="survey.region">
            <field name="name">Sureste</field>
            <field name="code">SE</field>
            <field name="description">Región Sureste del país (incluye Yucatán, Quintana Roo, Campeche, etc.)</field>
            <field name="sequence">70</field>
            <field name="color">7</field>
            <field name="active">True</field>
        </record>

        <!-- Región Este -->
        <record id="region_este" model="survey.region">
            <field name="name">Este</field>
            <field name="code">EST</field>
            <field name="description">Región Este del país (incluye Veracruz, etc.)</field>
            <field name="sequence">80</field>
            <field name="color">8</field>
            <field name="active">True</field>
        </record>

        <!-- Región Nacional (para encuestas a nivel nacional) -->
        <record id="region_nacional" model="survey.region">
            <field name="name">Nacional</field>
            <field name="code">NAC</field>
            <field name="description">Alcance nacional - para encuestas que abarcan todo el país</field>
            <field name="sequence">5</field>
            <field name="color">9</field>
            <field name="active">True</field>
        </record>

        <!-- Región Internacional -->
        <record id="region_internacional" model="survey.region">
            <field name="name">Internacional</field>
            <field name="code">INT</field>
            <field name="description">Para participantes fuera del país</field>
            <field name="sequence">90</field>
            <field name="color">10</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>

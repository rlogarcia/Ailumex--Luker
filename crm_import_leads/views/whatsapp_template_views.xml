<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Template Views -->
    <record id="view_whatsapp_template_list" model="ir.ui.view">
        <field name="name">whatsapp.template.list</field>
        <field name="model">whatsapp.template</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Templates">
                <field name="name" />
                <field name="code" />
                <field name="template_type" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <record id="view_whatsapp_template_form" model="ir.ui.view">
        <field name="name">whatsapp.template.form</field>
        <field name="model">whatsapp.template</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Template">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active" />
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="template_type" />
                        </group>
                        <group>
                            <field name="active" />
                        </group>
                    </group>
                    <group>
                        <field name="message" widget="text"
                            placeholder="Use {{name}}, {{company}}, {{email}}, {{phone}}, {{user}} as variables" />
                    </group>
                    <notebook>
                        <page string="Help">
                            <group>
                                <div class="alert alert-info">
                                    <h4>Available Variables:</h4>
                                    <ul>
                                        <li><strong>{{name}}</strong> - Contact name</li>
                                        <li><strong>{{company}}</strong> - Company name</li>
                                        <li><strong>{{email}}</strong> - Email address</li>
                                        <li><strong>{{phone}}</strong> - Phone number</li>
                                        <li><strong>{{user}}</strong> - Assigned salesperson</li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_whatsapp_template" model="ir.actions.act_window">
        <field name="name">WhatsApp Templates</field>
        <field name="res_model">whatsapp.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first WhatsApp template
            </p>
            <p>
                Templates help you send standardized messages quickly.
            </p>
        </field>
    </record>

    <!-- SubmenÃº: Templates - Solo supervisores y directores -->
    <menuitem id="menu_whatsapp_templates"
        name="Templates"
        parent="menu_whatsapp_root"
        action="action_whatsapp_template"
        groups="group_supervisor_comercial"
        sequence="3" />
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Estados de perfil base necesarios para transiciones de ciclo de vida -->

        <record id="profile_state_active" model="benglish.student.profile.state">
            <field name="name">Activo</field>
            <field name="code">active</field>
            <field name="description">Estudiante activo en el sistema</field>
            <field name="sequence">10</field>
            <field name="can_schedule" eval="True" />
            <field name="can_attend" eval="True" />
            <field name="can_use_apps" eval="True" />
            <field name="can_view_history" eval="True" />
            <field name="can_request_freeze" eval="True" />
        </record>

        <record id="profile_state_temp_inactive" model="benglish.student.profile.state">
            <field name="name">Inactivo Temporal</field>
            <field name="code">temp_inactive</field>
            <field name="description">Estudiante temporalmente inactivo</field>
            <field name="sequence">20</field>
            <field name="can_schedule" eval="False" />
            <field name="can_attend" eval="False" />
            <field name="can_use_apps" eval="False" />
            <field name="can_view_history" eval="True" />
            <field name="can_request_freeze" eval="False" />
        </record>

        <record id="profile_state_retraction" model="benglish.student.profile.state">
            <field name="name">Retirado</field>
            <field name="code">withdrawn</field>
            <field name="description">Estudiante retirado del programa</field>
            <field name="sequence">30</field>
            <field name="can_schedule" eval="False" />
            <field name="can_attend" eval="False" />
            <field name="can_use_apps" eval="False" />
            <field name="can_view_history" eval="True" />
            <field name="can_request_freeze" eval="False" />
        </record>

        <record id="profile_state_completed" model="benglish.student.profile.state">
            <field name="name">Completado</field>
            <field name="code">completed</field>
            <field name="description">Estudiante que complet√≥ el programa</field>
            <field name="sequence">40</field>
            <field name="can_schedule" eval="False" />
            <field name="can_attend" eval="False" />
            <field name="can_use_apps" eval="True" />
            <field name="can_view_history" eval="True" />
            <field name="can_request_freeze" eval="False" />
        </record>

    </data>
</odoo>
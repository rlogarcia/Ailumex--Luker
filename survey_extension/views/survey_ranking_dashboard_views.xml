        <field name="email" optional="show"/>
        <field name="scoring_percentage" string="Puntaje (%)"/>
        <field name="x_score_obtained" string="Puntaje (pts)" optional="hide"/>
        <field name="x_survey_duration_display" string="Tiempo"/>
        <field name="end_datetime" optional="hide"/>
        <field name="x_ranking_percentile" string="Percentil" widget="percentage" optional="hide"/>
        <field name="state" string="Estado" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'in_progress'" optional="show"/>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_student_change_state_wizard_form" model="ir.ui.view">
        <field name="name">benglish.student.change.state.wizard.form</field>
        <field name="model">benglish.student.change.state.wizard</field>
        <field name="arch" type="xml">
            <form string="Cambiar Estado">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-info-circle"/> 
                        Seleccione el nuevo estado. Solo se muestran las transiciones permitidas.
                    </div>
                    
                    <group>
                        <group string="InformaciÃ³n del Estudiante">
                            <field name="student_id" readonly="1" string="Estudiante"/>
                            <field name="estado_actual_id" readonly="1" string="Estado Actual"/>
                        </group>
                        <group string="Nuevo Estado">
                            <field name="estado_nuevo_id" 
                                string="Estado Destino"
                                options="{'no_create': True, 'no_create_edit': True}"
                                required="1"/>
                            <field name="requiere_motivo" invisible="1"/>
                        </group>
                    </group>
                    
                    <group invisible="not requiere_motivo">
                        <field name="motivo" string="Motivo del Cambio" 
                            placeholder="Explique el motivo del cambio de estado..."
                            required="requiere_motivo"/>
                    </group>
                    
                    <footer>
                        <button name="action_confirmar" 
                            string="Cambiar Estado" 
                            type="object" 
                            class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for the wizard -->
    <record id="action_student_change_state_wizard" model="ir.actions.act_window">
        <field name="name">Cambiar Estado</field>
        <field name="res_model">benglish.student.change.state.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

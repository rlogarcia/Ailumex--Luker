<odoo>
    <data>

        <!-- Vista list (Lista) de Niveles -->
        <record id="view_benglish_level_list" model="ir.ui.view">
            <field name="name">benglish.level.list</field>
            <field name="model">benglish.level</field>
            <field name="arch" type="xml">
                <list string="Niveles AcadÃ©micos" default_order="phase_id, sequence, name"
                    decoration-muted="not active" decoration-info="subject_count &gt; 5">
                    <field name="sequence" widget="handle" />
                    <field name="code" />
                    <field name="name" />
                    <field name="phase_id" />
                    <field name="max_unit" string="Unidad MÃ¡x" />
                    <field name="duration_weeks" string="Semanas" />
                    <field name="total_hours" string="Horas" />
                    <field name="subject_count" string="Asignaturas" />
                    <field name="active" invisible="1" />
                    <button name="action_view_subjects" type="object" string="Ver Asignaturas"
                        class="btn-primary" icon="fa-book-open"
                        invisible="subject_count == 0" />
                </list>
            </field>
        </record>

        <!-- Vista Form (Formulario) de Niveles -->
        <record id="view_benglish_level_form" model="ir.ui.view">

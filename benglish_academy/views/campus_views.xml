        <!-- Vista de B√∫squeda de Sub-sedes -->
        <record id="view_benglish_subcampus_search" model="ir.ui.view">
            <field name="name">benglish.subcampus.search</field>
            <field name="model">benglish.subcampus</field>
            <field name="arch" type="xml">
                <search string="Buscar Sub-sedes">
                    <field name="name" string="Aula"

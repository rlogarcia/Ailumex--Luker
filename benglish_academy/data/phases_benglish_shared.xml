<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ============================================ -->
        <!-- FASES ACADÉMICAS COMPARTIDAS - BENGLISH -->
        <!-- ============================================ -->
        <!-- Las 3 fases son compartidas por todos los planes del programa Benglish -->

        <!-- Fase Basic - Benglish (Compartida) -->
        <record id="phase_benglish_basic" model="benglish.phase">
            <field name="name">Basic</field>
            <field name="code">BE-F-001</field>
            <field name="program_id" ref="program_benglish" />
            <field name="sequence">10</field>
            <field name="duration_months">8</field>
            <field name="description">Fase básica del programa Benglish (compartida por todos los
                planes).</field>
            <field name="active" eval="True" />
        </record>

        <!-- Fase Intermediate - Benglish (Compartida) -->
        <record id="phase_benglish_intermediate" model="benglish.phase">
            <field name="name">Intermediate</field>
            <field name="code">BE-F-002</field>
            <field name="program_id" ref="program_benglish" />
            <field name="sequence">20</field>
            <field name="duration_months">8</field>
            <field name="description">Fase intermedia del programa Benglish (compartida por todos
                los planes).</field>
            <field name="active" eval="True" />
        </record>

        <!-- Fase Advanced - Benglish (Compartida) -->
        <record id="phase_benglish_advanced" model="benglish.phase">
            <field name="name">Advanced</field>
            <field name="code">BE-F-003</field>
            <field name="program_id" ref="program_benglish" />
            <field name="sequence">30</field>
            <field name="duration_months">8</field>
            <field name="description">Fase avanzada del programa Benglish (compartida por todos los
                planes).</field>
            <field name="active" eval="True" />
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        NOTA: El menú raíz WhatsApp está definido en crm_import_leads
        Este módulo agrega submenús al menú raíz existente
    -->

    <!-- Submenú: Inbox - Todos los usuarios comerciales (nuevo sistema) -->
    <menuitem id="menu_whatsapp_inbox"
        name="Inbox"
        parent="crm_import_leads.menu_whatsapp_root"
        action="action_whatsapp_inbox"
        groups="crm_import_leads.group_asesor_comercial"
        sequence="1" />

    <!-- Submenú: Cola de reintentos - Solo supervisores y directores -->
    <menuitem id="menu_crm_whatsapp_queue"
        name="Cola de reintentos"
        parent="crm_import_leads.menu_whatsapp_root"
        action="action_whatsapp_message_queue"
        groups="crm_import_leads.group_supervisor_comercial"
        sequence="10" />

    <!-- Submenú: Integration Logs - Solo directores y administradores -->
    <menuitem id="menu_integration_logs"
        name="Integration Logs"
        parent="crm_import_leads.menu_whatsapp_root"
        action="action_integration_log"
        groups="crm_import_leads.group_director_comercial,base.group_system"
        sequence="20" />

</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 
        HU-CRM-11: Menús de Reportes CRM
        ================================
        
        Estructura de menú para acceder a reportes y análisis
    -->

    <!-- Menú Principal: Reportes CRM -->
    <menuitem
        id="menu_crm_reports_main"
        name="Reportes"
        parent="crm.crm_menu_root"
        sequence="50" />

    <!-- Submenú: Análisis de Leads -->
    <menuitem
        id="menu_crm_reports_leads"
        name="Análisis de Leads"
        parent="menu_crm_reports_main"
        sequence="10" />

    <!-- Menú: Fuentes y Campañas -->
    <menuitem
        id="menu_crm_report_source_campaign"
        name="Por Fuente/Campaña"
        parent="menu_crm_reports_leads"
        action="action_crm_lead_analysis_source_campaign"
        sequence="10" />

    <!-- Menú: Conversión -->
    <menuitem
        id="menu_crm_report_conversion"
        name="Conversión por Etapa"
        parent="menu_crm_reports_leads"
        action="action_crm_lead_analysis_conversion"
        sequence="20" />

    <!-- Menú: Análisis Temporal -->
    <menuitem
        id="menu_crm_report_temporal"
        name="Evolución Temporal"
        parent="menu_crm_reports_leads"
        action="action_crm_lead_analysis_temporal"
        sequence="30" />

    <!-- Submenú: Rendimiento Comercial -->
    <menuitem
        id="menu_crm_reports_performance"
        name="Rendimiento Comercial"
        parent="menu_crm_reports_main"
        sequence="20" />

    <!-- Menú: Por Asesor -->
    <menuitem
        id="menu_crm_report_by_user"
        name="Por Asesor Comercial"
        parent="menu_crm_reports_performance"
        action="action_crm_lead_analysis_by_user"
        sequence="10" />

</odoo>
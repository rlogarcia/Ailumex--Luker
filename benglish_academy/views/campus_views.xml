<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista list (Lista) de Sedes -->
        <record id="view_benglish_campus_list" model="ir.ui.view">
            <field name="name">benglish.campus.list</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <list string="Sedes" default_order="sequence, name"
                    decoration-muted="not active"
                    decoration-bf="campus_type == 'main'"
                    decoration-success="campus_type == 'main'"
                    decoration-info="campus_type == 'branch'">
                    <field name="sequence" widget="handle" />
                    <field name="code" />
                    <field name="name" />
                    <field name="city_name" string="Ciudad" />
                    <field name="department_name" string="Departamento" optional="show" />
                    <field name="is_main_campus" widget="boolean_toggle" string="Principal" />
                    <field name="parent_campus_id" optional="show" />
                    <field name="campus_type" widget="badge"
                        decoration-success="campus_type == 'main'"
                        decoration-info="campus_type == 'branch'"
                        decoration-warning="campus_type == 'online'" />
                    <field name="city" string="Barrio/Zona" optional="hide" />
                    <field name="group_count" string="Grupos" optional="show" />
                    <field name="total_capacity" string="Capacidad Total" />
                    <field name="manager_id" widget="many2one_avatar_user" />
                    <field name="active" invisible="1" />
                    <button name="action_view_subcampus" type="object" string="Ver Aulas"
                        class="btn-info" icon="fa-building"
                        invisible="subcampus_count == 0" />
                </list>
            </field>
        </record>

        <!-- Vista Form (Formulario) de Sedes -->
        <record id="view_benglish_campus_form_v2" model="ir.ui.view">
            <field name="name">benglish.campus.form.v2</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <form string="Sede">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_courses" type="object"
                                class="oe_stat_button" icon="fa-book">
                                <field name="course_count" widget="statinfo" string="Cursos" />
                            </button>
                            <button name="action_view_groups" type="object"
                                class="oe_stat_button" icon="fa-users">
                                <field name="group_count" widget="statinfo" string="Grupos" />
                            </button>
                            <button name="action_view_teachers" type="object"
                                class="oe_stat_button" icon="fa-chalkboard-teacher">
                                <field name="teacher_count" widget="statinfo" string="Docentes" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger"
                            invisible="active" />
                        <widget name="web_ribbon" title="SEDE PRINCIPAL" bg_color="text-bg-success"
                            invisible="campus_type != 'main'" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Ej: Sede Norte" />
                            </h1>
                            <div class="o_row">
                                <label for="code" class="fw-bold me-2">C√≥digo:</label>
                                <field name="code" readonly="1" class="fw-bold text-primary"
                                    style="min-width: 100px; display: inline-block;" />
                                <field name="campus_type" widget="badge"
                                    decoration-success="campus_type == 'main'"
                                    decoration-info="campus_type == 'branch'"
                                    decoration-warning="campus_type == 'online'" />
                            </div>
                        </div>
                        <group>
                            <group string="üìÑ Informaci√≥n B√°sica">
                                <field name="city_name" placeholder="Ej: Bogot√°, Medell√≠n, Cali"
                                    invisible="campus_type == 'online'"
                                    required="campus_type != 'online'" />
                                <field name="department_name" placeholder="Ej: Cundinamarca"
                                    invisible="campus_type == 'online'" />
                                <field name="is_main_campus" widget="boolean_toggle"
                                    invisible="campus_type == 'online'" />
                                <field name="parent_campus_id"
                                    invisible="is_main_campus or campus_type == 'online'"
                                    required="campus_type != 'online' and not is_main_campus" />
                                <field name="manager_id" widget="many2one_avatar_user"
                                    string="Coordinador" />
                                <field name="sequence" />
                                <field name="active" widget="boolean_toggle" />
                            </group>
                            <group string="üìè Capacidad">
                                <field name="capacity" string="Capacidad base" />
                                <field name="total_capacity" string="Capacidad total (con aulas)" />
                                <field name="child_campus_count" string="Sedes secundarias"
                                    invisible="not is_main_campus" />
                            </group>
                        </group>
                        <group string="üìç Informaci√≥n de Contacto">
                            <group string="Direcci√≥n">
                                <field name="street" placeholder="Calle y n√∫mero" />
                                <field name="street2"
                                    placeholder="Complemento (Apto, Oficina, etc.)" />
                                <field name="city" placeholder="Barrio o Zona" />
                                <field name="state_id" placeholder="Departamento/Estado" />
                            </group>
                            <group string="Contacto">
                                <field name="country_id" placeholder="Pa√≠s" />
                                <field name="zip" placeholder="C√≥digo postal" />
                                <field name="phone" widget="phone" placeholder="+57 300 123 4567" />
                                <field name="email" widget="email"
                                    placeholder="contacto@benglish.com" />
                            </group>
                        </group>
                        <notebook>
                            <page string="‚è∞ Configuraci√≥n de Horario" name="schedule_config"
                                priority="1">
                                <group>
                                    <group string="Horarios Permitidos">
                                        <label for="schedule_start_time"
                                            string="Horario de Operaci√≥n" />
                                        <div class="o_row">
                                            <field name="schedule_start_time" widget="float_time"
                                                class="oe_inline" />
                                            <span class="mx-2">hasta</span>
                                            <field name="schedule_end_time" widget="float_time"
                                                class="oe_inline" />
                                        </div>
                                        <field name="schedule_summary" readonly="1"
                                            class="text-muted font-italic" />
                                        <field name="default_session_duration"
                                            help="Duraci√≥n est√°ndar en horas para las sesiones" />
                                        <field name="class_duration_text"
                                            placeholder="Ej: 50' cada una" />
                                        <field name="schedule_text"
                                            placeholder="Lunes: 11 am - 1pm&#10;Martes - Viernes: 8 am - 1 pm / 3pm - 9pm" />
                                    </group>
                                    <group string="D√≠as Permitidos para Programaci√≥n">
                                        <field name="allow_monday" widget="boolean_toggle" />
                                        <field name="allow_tuesday" widget="boolean_toggle" />
                                        <field name="allow_wednesday" widget="boolean_toggle" />
                                        <field name="allow_thursday" widget="boolean_toggle" />
                                        <field name="allow_friday" widget="boolean_toggle" />
                                        <field name="allow_saturday" widget="boolean_toggle" />
                                        <field name="allow_sunday" widget="boolean_toggle" />
                                    </group>
                                </group>
                                <div class="alert alert-info" role="alert">
                                    <strong>‚ÑπÔ∏è Informaci√≥n:</strong> Esta configuraci√≥n determina en
                                    qu√© d√≠as y horarios el coordinador acad√©mico puede programar
                                    sesiones de clase en esta sede. Las sesiones que no cumplan con
                                    estas restricciones ser√°n rechazadas autom√°ticamente. </div>
                            </page>
                            <page string="üè¢ Sedes Secundarias" name="child_campus"
                                invisible="not is_main_campus"
                                priority="2">
                                <field name="child_campus_ids"
                                    context="{'default_parent_campus_id': id, 'default_city_name': city_name, 'default_is_main_campus': False}">
                                    <list>
                                        <field name="code" />
                                        <field name="name" />
                                        <field name="city" string="Barrio/Zona" />
                                        <field name="phone" />
                                        <field name="subcampus_count" string="Aulas" />
                                        <field name="manager_id" widget="many2one_avatar_user" />
                                        <field name="active" widget="boolean_toggle" />
                                    </list>
                                </field>
                            </page>
                            <page string="üìä Resumen" name="summary">
                                <group>
                                    <group string="Estad√≠sticas">
                                        <field name="child_campus_count" readonly="1"
                                            invisible="not is_main_campus"
                                            string="Sedes secundarias" />
                                        <field name="subcampus_count" readonly="1" />
                                        <field name="course_count" readonly="1" />
                                        <field name="group_count" readonly="1" />
                                        <field name="teacher_count" readonly="1" />
                                    </group>
                                    <group string="Informaci√≥n R√°pida">
                                        <label for="capacity" string="Capacidad base" />
                                        <div class="o_row">
                                            <field name="capacity" readonly="1" />
                                            <span class="text-muted">estudiantes</span>
                                        </div>
                                        <label for="total_capacity"
                                            string="Capacidad total (con aulas)" />
                                        <div class="o_row">
                                            <field name="total_capacity" readonly="1" />
                                            <span class="text-muted">estudiantes</span>
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page string="üè¢ Sub-sedes / Aulas" name="subcampus">
                                <field name="subcampus_ids" context="{'default_campus_id': id}">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle" />
                                        <field name="code" />
                                        <field name="name" />
                                        <field name="subcampus_type" />
                                        <field name="space_label" optional="show" />
                                        <field name="modality" widget="badge"
                                            decoration-success="modality == 'presential'"
                                            decoration-info="modality == 'virtual'"
                                            decoration-warning="modality == 'hybrid'" />
                                        <field name="capacity" string="Cap. Presencial" />
                                        <field name="virtual_capacity" optional="show" />
                                        <field name="total_capacity" string="Total" />
                                        <field name="building" optional="show" />
                                        <field name="floor" optional="show" />
                                        <field name="is_available" widget="boolean_toggle" />
                                        <field name="has_projector" widget="boolean_toggle"
                                            optional="hide" />
                                        <field name="has_computer" widget="boolean_toggle"
                                            optional="hide" />
                                        <field name="has_internet" widget="boolean_toggle"
                                            optional="hide" />
                                        <field name="has_audio_system" widget="boolean_toggle"
                                            optional="hide" />
                                        <field name="active" widget="boolean_toggle" />
                                    </list>
                                </field>
                            </page>
                            <page string="Cursos">
                                <field name="course_ids">
                                    <list>
                                        <field name="code" />
                                        <field name="name" />
                                        <field name="subject_id" />
                                        <field name="main_teacher_id" widget="many2one_avatar_user" />
                                        <field name="start_date" />
                                        <field name="end_date" />
                                        <field name="group_count" />
                                        <field name="state" widget="badge" />
                                    </list>
                                </field>
                            </page>
                            <page string="Grupos">
                                <field name="group_ids" readonly="1">
                                    <list create="0" edit="0" delete="0">
                                        <field name="code" />
                                        <field name="name" />
                                        <field name="subject_id" />
                                        <field name="subcampus_id" />
                                        <field name="teacher_id" widget="many2one_avatar_user" />
                                        <field name="current_students" />
                                        <field name="total_capacity" />
                                        <field name="state" widget="badge" />
                                    </list>
                                </field>
                            </page>
                            <page string="Sesiones">
                                <field name="session_ids" readonly="1">
                                    <list model="benglish.class.session">
                                        <field name="subject_id" />
                                        <field name="start_datetime" />
                                        <field name="end_datetime" />
                                        <field name="subcampus_id" />
                                        <field name="teacher_id" widget="many2one_avatar_user" />
                                        <field name="state" widget="badge"
                                            decoration-info="state == 'planned'"
                                            decoration-warning="state == 'in_progress'"
                                            decoration-success="state == 'done'"
                                            decoration-danger="state == 'cancelled'" />
                                    </list>
                                </field>
                            </page>
                            <page string="Docentes">
                                <field name="teacher_ids" readonly="1">
                                    <list create="0" edit="0" delete="0">
                                        <field name="name" />
                                        <field name="login" />
                                        <field name="email" />
                                        <field name="phone" />
                                    </list>
                                </field>
                            </page>
                            <page string="Informaci√≥n Adicional">
                                <group>
                                    <field name="address" readonly="1" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Sedes -->
        <record id="view_benglish_campus_kanban" model="ir.ui.view">
            <field name="name">benglish.campus.kanban</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name" />
                    <field name="code" />
                    <field name="city" />
                    <field name="campus_type" />
                    <field name="subcampus_count" />
                    <field name="total_capacity" />
                    <field name="manager_id" />
                    <field name="active" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title" style="display:block;">
                                            <i class="fa fa-building" />
                                            <field name="name" />
                                        </strong>
                                        <div style="margin-top: 2px;">
                                            <span class="badge text-bg-secondary"
                                                style="font-size:13px; color:#888; display:inline-block;">
                                                <field name="code" />
                                            </span>
                                        </div>
                                    </div>
                                    <span t-if="record.campus_type.raw_value == 'main'"
                                        class="badge text-bg-success">Principal</span>
                                    <span t-if="record.campus_type.raw_value == 'branch'"
                                        class="badge text-bg-info">Sucursal</span>
                                    <span t-if="record.campus_type.raw_value == 'online'"
                                        class="badge text-bg-warning">Virtual</span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-muted">
                                        <i class="fa fa-map-marker" />
                                        <field name="city" />
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge text-bg-info me-1">
                                            <i class="fa fa-building" /> <field
                                                name="subcampus_count" /> aulas </span>
                                        <span class="badge text-bg-primary">
                                            <i class="fa fa-users" /> <field name="total_capacity" />
                                            capacidad </span>
                                    </div>
                                    <div class="mt-2">
                                        <field name="manager_id" widget="many2one_avatar_user" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista de B√∫squeda de Sedes -->
        <record id="view_benglish_campus_search" model="ir.ui.view">
            <field name="name">benglish.campus.search</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <search string="Buscar Sedes">
                    <field name="name" string="Sede"
                        filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" />
                    <field name="code" />
                    <field name="city" />
                    <field name="manager_id" />
                    <separator />
                    <filter string="Activos" name="active" domain="[('active', '=', True)]" />
                    <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
                    <separator />
                    <filter string="Sede Principal" name="main"
                        domain="[('campus_type', '=', 'main')]" />
                    <filter string="Sucursal" name="branch"
                        domain="[('campus_type', '=', 'branch')]" />
                    <filter string="Virtual" name="online" domain="[('campus_type', '=', 'online')]" />
                    <group expand="0" string="Agrupar por">
                        <filter string="Tipo" name="group_by_type"
                            context="{'group_by': 'campus_type'}" />
                        <filter string="Ciudad" name="group_by_city"
                            context="{'group_by': 'city'}" />
                        <filter string="Coordinador" name="group_by_manager"
                            context="{'group_by': 'manager_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Acci√≥n de Ventana para Sedes -->
        <record id="action_benglish_campus" model="ir.actions.act_window">
            <field name="name">Sedes</field>
            <field name="res_model">benglish.campus</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    üè¢ Crear tu primera Sede
                </p>
                <p>
                    <strong>Las sedes</strong> son los espacios f√≠sicos o virtuales donde se
                    imparten las clases.<br /> üìç <em>Cada sede puede tener m√∫ltiples aulas o
                    sub-sedes con diferentes caracter√≠sticas y capacidades.</em>
                </p>
            </field>
        </record>

        <!-- Vista de Lista de Sub-sedes -->
        <record id="view_benglish_subcampus_list" model="ir.ui.view">
            <field name="name">benglish.subcampus.list</field>
            <field name="model">benglish.subcampus</field>
            <field name="arch" type="xml">
                <list string="Aulas / Sub-sedes" default_order="campus_id, sequence, name"
                    decoration-muted="not active"
                    decoration-success="is_available and active"
                    decoration-warning="not is_available and active">
                    <field name="sequence" widget="handle" />
                    <field name="code" />
                    <field name="name" />
                    <field name="campus_id" />
                    <field name="subcampus_type" widget="badge"
                        decoration-primary="subcampus_type == 'classroom'"
                        decoration-info="subcampus_type == 'lab'"
                        decoration-warning="subcampus_type == 'virtual'" />
                    <field name="space_label" optional="show" />
                    <field name="capacity" string="Cap." />
                    <field name="building" optional="show" />
                    <field name="floor" optional="show" />
                    <field name="is_available" string="Disponible" />
                    <field name="has_projector" string="üìπ" widget="boolean" optional="show" />
                    <field name="has_computer" string="üíª" widget="boolean" optional="show" />
                    <field name="has_internet" string="üåê" widget="boolean" optional="show" />
                    <field name="has_audio_system" string="üîä" widget="boolean" optional="hide" />
                    <field name="has_air_conditioning" string="‚ùÑÔ∏è" widget="boolean" optional="hide" />
                    <field name="active" invisible="1" />
                </list>
            </field>
        </record>

        <!-- Vista de Formulario de Sub-sedes -->
        <record id="view_benglish_subcampus_form_v2" model="ir.ui.view">
            <field name="name">benglish.subcampus.form.v2</field>
            <field name="model">benglish.subcampus</field>
            <field name="arch" type="xml">
                <form string="Sub-sede / Aula">
                    <header>
                        <button name="action_mark_available" string="Marcar Disponible"
                            type="object" class="btn-success"
                            invisible="is_available" />
                        <button name="action_mark_unavailable" string="Marcar No Disponible"
                            type="object" class="btn-warning"
                            invisible="not is_available" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_groups" type="object"

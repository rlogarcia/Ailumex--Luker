                                        <span class="badge text-bg-info me-1">
                                            <i class="fa fa-building" /> <field
                                                name="subcampus_count" /> aulas </span>
                                        <span class="badge text-bg-primary">
                                            <i class="fa fa-users" /> <field name="total_capacity" />
                                            capacidad </span>
                                    </div>
                                    <div class="mt-2">
                                        <field name="manager_id" widget="many2one_avatar_user" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista de B√∫squeda de Sedes -->
        <record id="view_benglish_campus_search" model="ir.ui.view">
            <field name="name">benglish.campus.search</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <search string="Buscar Sedes">
                    <field name="name" string="Sede"
                        filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" />
                    <field name="code" />
                    <field name="city_name" />
                    <field name="manager_id" />
                    <separator />
                    <filter string="Activos" name="active" domain="[('active', '=', True)]" />
                    <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
                    <separator />
                    <filter string="Presencial" name="branch"
                        domain="[('campus_type', '=', 'branch')]" />
                    <filter string="Virtual" name="online" domain="[('campus_type', '=', 'online')]" />
                    <group expand="0" string="Agrupar por">
                        <filter string="Tipo" name="group_by_type"
                            context="{'group_by': 'campus_type'}" />
                        <filter string="Ciudad" name="group_by_city"
                            context="{'group_by': 'city_name'}" />
                        <filter string="Coordinador" name="group_by_manager"
                            context="{'group_by': 'manager_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Acci√≥n de Ventana para Sedes -->
        <record id="action_benglish_campus" model="ir.actions.act_window">
            <field name="name">Sedes</field>
            <field name="res_model">benglish.campus</field>
            <field name="view_mode">kanban,list,form</field>

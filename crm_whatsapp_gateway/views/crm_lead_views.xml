<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extender vista form de crm.lead para WhatsApp -->
    <record id="view_crm_lead_form_whatsapp" model="ir.ui.view">
        <field name="name">crm.lead.form.whatsapp</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">

            <!-- Agregar bot칩n WhatsApp en button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_whatsapp_chat"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-whatsapp"
                    invisible="not has_whatsapp">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">WhatsApp</span>
                        <span class="o_stat_text">Chat</span>
                    </div>
                </button>
            </xpath>

            <!-- Agregar campos de WhatsApp en el formulario -->
            <xpath expr="//field[@name='phone']" position="after">
                <field name="whatsapp_phone" invisible="1" />
                <field name="has_whatsapp" invisible="1" />
                <field name="gateway_channel_id" invisible="1" />
            </xpath>

        </field>
    </record>

    <!-- Vista de lista: agregar indicador de WhatsApp -->
    <record id="view_crm_lead_tree_whatsapp" model="ir.ui.view">
        <field name="name">crm.lead.tree.whatsapp</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="has_whatsapp" string="WhatsApp" widget="boolean" optional="show" />
            </xpath>
        </field>
    </record>

    <!-- Filtro: Leads con WhatsApp -->
    <record id="view_crm_lead_search_whatsapp" model="ir.ui.view">
        <field name="name">crm.lead.search.whatsapp</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator />
                <filter string="Con WhatsApp"
                    name="has_whatsapp"
                    domain="[('has_whatsapp', '=', True)]"
                    help="Leads con conversaci칩n de WhatsApp activa" />
            </xpath>
        </field>
    </record>

    <!-- Widget de acci칩n r치pida: Enviar WhatsApp -->
    <record id="crm_lead_action_send_whatsapp" model="ir.actions.server">
        <field name="name">Enviar WhatsApp</field>
        <field name="model_id" ref="crm.model_crm_lead" />
        <field name="binding_model_id" ref="crm.model_crm_lead" />
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
            action = records[0].action_send_whatsapp_message()
        </field>
    </record>

</odoo>
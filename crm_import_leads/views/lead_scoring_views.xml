<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de lista para reglas de scoring -->
    <record id="view_lead_scoring_rule_list" model="ir.ui.view">
        <field name="name">lead.scoring.rule.list</field>
        <field name="model">lead.scoring.rule</field>
        <field name="arch" type="xml">
            <list string="Reglas de Puntuación" default_order="sequence,name" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="condition_field"/>
                <field name="condition_operator"/>
                <field name="condition_value"/>
                <field name="score_points" decoration-success="score_points &gt; 0" decoration-danger="score_points &lt; 0"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para reglas de scoring -->
    <record id="view_lead_scoring_rule_form" model="ir.ui.view">
        <field name="name">lead.scoring.rule.form</field>
        <field name="model">lead.scoring.rule</field>
        <field name="arch" type="xml">
            <form string="Regla de Puntuación">
                <sheet>
                    <widget name="web_ribbon" title="Archivada" bg_color="text-bg-danger" invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name" string="Nombre de la Regla"/>
                        <h1>
                            <field name="name" placeholder="Ej: Lead con monto alto ($50,000+)"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Configuración Básica">
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Puntuación">
                            <field name="score_points"/>
                        </group>
                    </group>
                    
                    <group string="Condición">
                        <group>
                            <field name="condition_field"/>
                            <field name="condition_operator"/>
                            <field name="condition_value" invisible="condition_operator in ['set', 'not set']"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <!-- Descripción eliminada para simplificar la UI -->
                        <page string="Estadísticas" name="stats" invisible="1">
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda/filtros -->
    <record id="view_lead_scoring_rule_search" model="ir.ui.view">
        <field name="name">lead.scoring.rule.search</field>
        <field name="model">lead.scoring.rule</field>
        <field name="arch" type="xml">
            <search string="Buscar Reglas">
                <field name="name" string="Nombre"/>
                <field name="condition_field"/>
                <field name="score_points"/>
                
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="Puntos Positivos" name="positive_points" domain="[('score_points', '&gt;', 0)]"/>
                <filter string="Puntos Negativos" name="negative_points" domain="[('score_points', '&lt;', 0)]"/>
                <filter string="Puntos Altos (20+)" name="high_points" domain="[('score_points', '&gt;=', 20)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Campo de Condición" name="groupby_field" context="{'group_by': 'condition_field'}"/>
                    <filter string="Operador" name="groupby_operator" context="{'group_by': 'condition_operator'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para el menú -->
    <record id="action_lead_scoring_rules" model="ir.actions.act_window">
        <field name="name">Reglas de Puntuación</field>
        <field name="res_model">lead.scoring.rule</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Menú en Configuración de CRM -->
    <menuitem id="menu_lead_scoring"
              name="Puntuación de Leads"
              parent="crm.crm_menu_config"
              action="action_lead_scoring_rules"
              sequence="30"/>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<!--
Archivo: survey_wpm_question_views.xml
Prop√≥sito: Vistas para configurar preguntas de tipo WPM (Palabras Por Minuto)

Define la interfaz administrativa donde se configuran las preguntas
de velocidad de lectura y escritura.
-->
<odoo>

    <!-- ================================================================== -->
    <!-- VISTA FORMULARIO: Configuraci√≥n de Pregunta WPM                   -->
    <!-- ================================================================== -->
    
    <record id="survey_question_form_inherit_wpm" model="ir.ui.view">
        <field name="name">survey.question.form.inherit.wpm</field>
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="arch" type="xml">
            
            <!-- A√±adir configuraci√≥n WPM en la pesta√±a de Opciones -->
            <xpath expr="//page[@name='options']" position="inside">
                
                <!-- Secci√≥n de Configuraci√≥n WPM (solo visible para preguntas WPM) -->
                <group string="Configuraci√≥n de Palabras Por Minuto (WPM)" 
                       invisible="question_type not in ('wpm_reading', 'wpm_typing')">
                    
                    <!-- Fila 1: Opciones de visualizaci√≥n -->
                    <group>
                        <field name="wpm_show_timer"/>
                        
                        <field name="wpm_allow_paste"
                               invisible="question_type != 'wpm_typing'"/>
                    </group>
                    
                    <!-- Fila 2: Texto de lectura y conteo -->
                    <group invisible="question_type != 'wpm_reading'">
                        <field name="wpm_reading_text" 
                               widget="text"
                               placeholder="Ingresa el texto que el usuario deber√° leer..."/>
                        
                        <field name="wpm_word_count" readonly="1"/>
                    </group>
                    
                    <!-- Fila 3: Instrucciones -->
                    <group colspan="2">
                        <field name="wpm_instructions" 
                               widget="text"
                               placeholder="Instrucciones para el participante..."/>
                    </group>
                    
                    <!-- Fila 4: Umbrales de clasificaci√≥n -->
                    <group string="Clasificaci√≥n de Velocidad (WPM)">
                        <group>
                            <field name="wpm_slow_threshold" 
                                   placeholder="150"
                                   help="Palabras por minuto consideradas lentas"/>
                            <field name="wpm_average_threshold"
                                   placeholder="250"
                                   help="Palabras por minuto consideradas promedio"/>
                        </group>
                        <group>
                            <field name="wpm_fast_threshold"
                                   placeholder="350"
                                   help="Palabras por minuto consideradas r√°pidas"/>
                            <div class="alert alert-success" role="alert">
                                <strong>Referencia:</strong><br/>
                                üê¢ Lento: &lt; 150 WPM<br/>
                                üìñ Promedio: 150-250 WPM<br/>
                                üöÄ R√°pido: 250-350 WPM<br/>
                                ‚ö° Excepcional: &gt; 350 WPM
                            </div>
                        </group>
                    </group>
                    
                </group>
                
            </xpath>
            
        </field>
    </record>

    <!-- ================================================================== -->
    <!-- VISTAS DE RESPUESTAS WPM - COMENTADAS TEMPORALMENTE               -->
    <!-- Se pueden activar cuando las vistas base de Odoo est√©n disponibles -->
    <!-- ================================================================== -->

</odoo>

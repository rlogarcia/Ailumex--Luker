<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================== -->
    <!-- WhatsApp Inbox - Vista de Conversaciones -->
    <!-- ============================================== -->
    
    <!-- Vista de lista de canales de WhatsApp -->
    <record id="view_discuss_channel_whatsapp_list" model="ir.ui.view">
        <field name="name">discuss.channel.whatsapp.list</field>
        <field name="model">discuss.channel</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Inbox" default_order="write_date desc">
                <field name="name" string="Contacto"/>
                <field name="gateway_channel_token" string="Teléfono"/>
                <field name="write_date" string="Última actividad"/>
                <field name="message_needaction_counter" string="Sin leer" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para canal de WhatsApp -->
    <record id="view_discuss_channel_whatsapp_form" model="ir.ui.view">
        <field name="name">discuss.channel.whatsapp.form</field>
        <field name="model">discuss.channel</field>
        <field name="arch" type="xml">
            <form string="Conversación WhatsApp">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Contacto"/>
                            <field name="gateway_channel_token" string="Teléfono WhatsApp"/>
                            <field name="gateway_id" string="Gateway"/>
                        </group>
                        <group>
                            <field name="create_date" string="Inicio conversación"/>
                            <field name="write_date" string="Última actividad"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Miembros">
                            <field name="channel_member_ids">
                                <list>
                                    <field name="partner_id"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el Inbox de WhatsApp -->
    <record id="action_whatsapp_inbox_channels" model="ir.actions.act_window">
        <field name="name">WhatsApp Inbox</field>
        <field name="res_model">discuss.channel</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('gateway_id', '!=', False), ('gateway_id.gateway_type', '=', 'whatsapp')]</field>
        <field name="context">{'search_default_my_channels': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay conversaciones de WhatsApp
            </p>
            <p>
                Las conversaciones de WhatsApp aparecerán aquí cuando los clientes envíen mensajes
                a la línea configurada.
            </p>
        </field>
    </record>

    <!-- Menú para WhatsApp Inbox -->
    <menuitem id="menu_whatsapp_inbox_channels"
        name="WhatsApp Inbox"
        parent="menu_whatsapp_root"
        action="action_whatsapp_inbox_channels"
        sequence="1"/>

    <!-- ============================================== -->
    <!-- Vista Kanban estilo chat para conversaciones -->
    <!-- ============================================== -->
    <record id="view_discuss_channel_whatsapp_kanban" model="ir.ui.view">
        <field name="name">discuss.channel.whatsapp.kanban</field>
        <field name="model">discuss.channel</field>
        <field name="arch" type="xml">
            <kanban default_order="write_date desc" class="o_kanban_mobile">
                <field name="name"/>
                <field name="gateway_channel_token"/>
                <field name="write_date"/>
                <field name="message_needaction_counter"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted small">
                                    <i class="fa fa-whatsapp text-success"/> 
                                    <field name="gateway_channel_token"/>
                                </div>
                            </div>
                            <div class="text-end">
                                <span t-if="record.message_needaction_counter.raw_value > 0" 
                                      class="badge bg-danger">
                                    <field name="message_needaction_counter"/>
                                </span>
                                <div class="text-muted small">
                                    <field name="write_date" widget="relative"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actualizar la acción para incluir vista kanban -->
    <record id="action_whatsapp_inbox_channels" model="ir.actions.act_window">
        <field name="name">WhatsApp Inbox</field>
        <field name="res_model">discuss.channel</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('gateway_id', '!=', False), ('gateway_id.gateway_type', '=', 'whatsapp')]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay conversaciones de WhatsApp
            </p>
            <p>
                Las conversaciones de WhatsApp aparecerán aquí cuando los clientes envíen mensajes
                a la línea configurada.
            </p>
        </field>
    </record>

</odoo>

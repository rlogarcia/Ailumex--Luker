<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ═══════════════════════════════════════════════════════════════════════════ -->
    <!-- VISTA DE ÁRBOL: Progreso Académico -->
    <!-- ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="view_enrollment_progress_tree" model="ir.ui.view">
        <field name="name">benglish.enrollment.progress.tree</field>
        <field name="model">benglish.enrollment.progress</field>
        <field name="arch" type="xml">
            <list string="Progreso en Asignaturas" decoration-success="state=='completed'"
                decoration-info="state=='in_progress'" decoration-muted="state=='pending'"
                decoration-danger="state=='failed'">
                <field name="student_id" />
                <field name="plan_id" />
                <field name="phase_id" />
                <field name="level_id" />
                <field name="subject_id" />
                <field name="state" widget="badge" decoration-success="state=='completed'"
                    decoration-info="state=='in_progress'" decoration-muted="state=='pending'"
                    decoration-danger="state=='failed'" />
                <field name="group_id" />
                <field name="coach_id" />
                <field name="final_grade" widget="progressbar" />
                <field name="attendance_percentage" />
                <field name="start_date" />
                <field name="end_date" />
            </list>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════════ -->
    <!-- VISTA DE FORMULARIO: Progreso Académico -->
    <!-- ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="view_enrollment_progress_form" model="ir.ui.view">
        <field name="name">benglish.enrollment.progress.form</field>
        <field name="model">benglish.enrollment.progress</field>
        <field name="arch" type="xml">
            <form string="Progreso en Asignatura">
                <header>
                    <button name="action_start" string="Iniciar" type="object" class="oe_highlight"
                        invisible="state != 'pending'" />
                    <button name="action_complete" string="Completar" type="object"
                        class="oe_highlight" invisible="state != 'in_progress'" />
                    <button name="action_fail" string="Marcar como Reprobado" type="object"
                        invisible="state not in ['in_progress', 'pending']" />
                    <button name="action_withdraw" string="Retirar" type="object"
                        invisible="state not in ['in_progress', 'pending']" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="pending,in_progress,completed" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Botones de acción si los hay -->
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="subject_id" readonly="1" />
                        </h1>
                        <h3>
                            <field name="student_id" readonly="1" />
                        </h3>
                    </div>

                    <group>
                        <group name="academic_info" string="Información Académica">
                            <field name="enrollment_id" readonly="1" />
                            <field name="plan_id" readonly="1" />
                            <field name="phase_id" readonly="1" />
                            <field name="level_id" readonly="1" />
                        </group>
                        <group name="dates" string="Fechas">
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>

                    <group>
                        <group name="group_info" string="Grupo y Modalidad">
                            <field name="group_id" />
                            <field name="coach_id" />
                            <field name="campus_id" />
                            <field name="delivery_mode" />
                            <field name="attendance_type" />
                        </group>
                        <group name="grades" string="Calificaciones y Asistencia">
                            <field name="final_grade" />
                            <field name="attendance_percentage" />
                            <field name="absences_count" />
                        </group>
                    </group>

                    <group name="prerequisites" string="Prerrequisitos">
                        <field name="prerequisite_ids" widget="many2many_tags" />
                        <field name="prerequisites_met" widget="boolean_toggle" />
                    </group>

                    <group name="notes" string="Observaciones">
                        <field name="notes" nolabel="1"
                            placeholder="Observaciones sobre el progreso del estudiante..." />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════════ -->
    <!-- VISTA KANBAN: Progreso Académico -->
    <!-- ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="view_enrollment_progress_kanban" model="ir.ui.view">
        <field name="name">benglish.enrollment.progress.kanban</field>
        <field name="model">benglish.enrollment.progress</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="student_id" />
                <field name="subject_id" />
                <field name="state" />
                <field name="final_grade" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="subject_id" />
                                    </strong>
                                    <br />
                                    <span class="o_kanban_record_subtitle">
                                        <field name="student_id" />
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="phase_id" /> / <field name="level_id" />
                                <br />
                                <strong>
                                Nota:</strong> <field name="final_grade" /> | <strong>Asist:</strong> <field
                                    name="attendance_percentage" />% </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="group_id" />
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="label_selection"
                                        options="{'classes': {'pending': 'default', 'in_progress': 'info', 'completed': 'success', 'failed': 'danger'}}" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════════ -->
    <!-- ACCIÓN DE VENTANA: Progreso Académico -->
    <!-- ═══════════════════════════════════════════════════════════════════════════ -->

    <record id="action_enrollment_progress" model="ir.actions.act_window">
        <field name="name">Progreso en Asignaturas</field>
        <field name="res_model">benglish.enrollment.progress</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay registros de progreso académico
            </p>
            <p>
                Los registros de progreso se crean automáticamente al matricular un estudiante a un
                plan de estudios.
            </p>
        </field>
    </record>

</odoo>
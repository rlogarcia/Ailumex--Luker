<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ===================================================================
             CRON JOB: Auto-Start Sessions
             Inicia automáticamente las sesiones cuya hora de inicio ya llegó
             Ejecutar cada 15 minutos
        =================================================================== -->
        <record id="ir_cron_auto_start_sessions" model="ir.cron">
            <field name="name">Iniciar Sesiones Automáticamente</field>
            <field name="model_id" ref="model_benglish_academic_session" />
            <field name="state">code</field>
            <field name="code">model._cron_auto_start_sessions()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True" />
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_admin" />
        </record>

        <!-- ===================================================================
             CRON JOB: Auto-Close Finished Sessions
             Cierra automáticamente las sesiones que ya pasaron su hora de fin
             Crea registros en historial académico y actualiza progreso
             Ejecutar cada 30 minutos
        =================================================================== -->
        <record id="ir_cron_auto_close_sessions" model="ir.cron">
            <field name="name">Cerrar Sesiones Finalizadas</field>
            <field name="model_id" ref="model_benglish_academic_session" />
            <field name="state">code</field>
            <field name="code">model._cron_auto_close_finished_sessions()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True" />
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_admin" />
        </record>

    </data>
</odoo>
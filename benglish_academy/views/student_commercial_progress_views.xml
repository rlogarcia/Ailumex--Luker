        <field name="name">benglish.student.commercial.progress.search</field>
        <field name="model">benglish.student.commercial.progress</field>
        <field name="arch" type="xml">
            <search string="Buscar Progreso Comercial">
                <field name="student_id" />
                <field name="enrollment_id" />
                <field name="level_id" />
                <field name="commercial_plan_id" />
                <separator />
                <filter name="filter_completed" string="Completados"
                    domain="[('level_status', '=', 'completed')]" />
                <filter name="filter_in_progress" string="En Progreso"
                    domain="[('level_status', '=', 'in_progress')]" />
                <filter name="filter_not_started" string="No Iniciados"
                    domain="[('level_status', '=', 'not_started')]" />
                <separator />
                <group expand="0" string="Agrupar Por">
                    <filter name="group_student" string="Estudiante"
                        context="{'group_by': 'student_id'}" />
                    <filter name="group_enrollment" string="Matr√≠cula"
                        context="{'group_by': 'enrollment_id'}" />
                    <filter name="group_plan" string="Plan Comercial"
                        context="{'group_by': 'commercial_plan_id'}" />
                    <filter name="group_level" string="Nivel"
                        context="{'group_by': 'level_id'}" />
                    <filter name="group_status" string="Estado"
                        context="{'group_by': 'level_status'}" />
                </group>
            </search>
        </field>
    </record>


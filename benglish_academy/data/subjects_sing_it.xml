<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- ========================================= -->
        <!-- ASIGNATURA COMPLEMENTARIA: SING IT        -->
        <!-- ========================================= -->
        <!-- 
        Asignatura opcional/complementaria para practicar inglés a través de canciones
        Disponible para todos los niveles de Benglish y B teens
        -->

        <!-- SING IT - BENGLISH -->
        <record id="subject_sing_it_benglish" model="benglish.subject">
            <field name="name">SING IT - Benglish</field>
            <field name="alias">SING IT</field>
            <field name="code">BE-SING-IT</field>
            <field name="level_id" ref="level_benglish_basic_unit1"/>
            <field name="sequence">500</field>
            <field name="subject_type">complementary</field>
            <field name="subject_classification">regular</field>
            <field name="subject_category">conversation_club</field>
            <field name="evaluable" eval="False"/>
            <field name="hours">1</field>
            <field name="credits">0</field>
            <field name="description">Clase complementaria de práctica de inglés a través de canciones. Mejora pronunciación, vocabulario y fluidez de forma divertida.</field>
            <field name="active" eval="True"/>
            <!-- No tiene prerrequisitos - es complementaria -->
        </record>

        <!-- SING IT - B TEENS -->
        <record id="subject_sing_it_beteens" model="benglish.subject">
            <field name="name">SING IT - B teens</field>
            <field name="alias">SING IT</field>
            <field name="code">BT-SING-IT</field>
            <field name="level_id" ref="level_beteens_basic_unit1"/>
            <field name="sequence">500</field>
            <field name="subject_type">complementary</field>
            <field name="subject_classification">regular</field>
            <field name="subject_category">conversation_club</field>
            <field name="evaluable" eval="False"/>
            <field name="hours">1</field>
            <field name="credits">0</field>
            <field name="description">Clase complementaria de práctica de inglés a través de canciones. Mejora pronunciación, vocabulario y fluidez de forma divertida.</field>
            <field name="active" eval="True"/>
        </record>
        
    </data>
</odoo>

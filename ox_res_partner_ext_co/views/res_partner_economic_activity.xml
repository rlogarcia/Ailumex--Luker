<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- res.partner.economic.activity action window -->
        <record id="res_partner_economic_activity_action" model="ir.actions.act_window">
            <field name="name">Actividad Económica</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.economic.activity</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Crear Actividad Económica
                </p>
                <p>
                    No se han creado actividades económicas
                </p>
            </field>
        </record>

        <!-- res.partner.economic.activity tree view -->
        <record id="res_partner_economic_activity_view_tree" model="ir.ui.view">
            <field name="name">res.partner.economic.activity.view.list</field>
            <field name="model">res.partner.economic.activity</field>
            <field name="arch" type="xml">
                <list>
                    <field name="code"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ============================================ -->
        <!-- FASES ACADÉMICAS COMPARTIDAS - B TEENS -->
        <!-- ============================================ -->
        <!-- Las 3 fases son compartidas por todos los planes del programa B teens -->

        <!-- Fase Basic - B teens (Compartida) -->
        <record id="phase_beteens_basic" model="benglish.phase">
            <field name="name">Basic</field>
            <field name="code">BT-F-001</field>
            <field name="program_id" ref="program_beteens" />
            <field name="sequence">10</field>
            <field name="duration_months">8</field>
            <field name="description">Fase básica del programa B teens (compartida por todos los
                planes).</field>
            <field name="active" eval="True" />
        </record>

        <!-- Fase Intermediate - B teens (Compartida) -->
        <record id="phase_beteens_intermediate" model="benglish.phase">
            <field name="name">Intermediate</field>
            <field name="code">BT-F-002</field>
            <field name="program_id" ref="program_beteens" />
            <field name="sequence">20</field>
            <field name="duration_months">8</field>
            <field name="description">Fase intermedia del programa B teens (compartida por todos los
                planes).</field>
            <field name="active" eval="True" />
        </record>

        <!-- Fase Advanced - B teens (Compartida) -->
        <record id="phase_beteens_advanced" model="benglish.phase">
            <field name="name">Advanced</field>
            <field name="code">BT-F-003</field>
            <field name="program_id" ref="program_beteens" />
            <field name="sequence">30</field>
            <field name="duration_months">8</field>
            <field name="description">Fase avanzada del programa B teens (compartida por todos los
                planes).</field>
            <field name="active" eval="True" />
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de formulario del wizard de resultados -->
    <record id="view_portal_user_creation_wizard_form" model="ir.ui.view">
        <field name="name">benglish.portal.user.creation.wizard.form</field>
        <field name="model">benglish.portal.user.creation.wizard</field>
        <field name="arch" type="xml">
            <form string="Resultado de Creación de Usuarios Portal">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="total_selected" readonly="1" /> Estudiantes Procesados
                        </h1>
                    </div>
                    
                    <group>
                        <group name="summary" string="Resumen">
                            <field name="created_count" 
                                decoration-success="created_count > 0"
                                widget="statinfo" />
                            <field name="skipped_count" 
                                decoration-warning="skipped_count > 0"
                                widget="statinfo" />
                            <field name="failed_count" 
                                decoration-danger="failed_count > 0"
                                widget="statinfo" />
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="✅ Creados Exitosamente" 
                            invisible="created_count == 0">
                            <group>
                                <field name="created_details" 
                                    nolabel="1" 
                                    widget="text"
                                    class="text-success" />
                            </group>
                        </page>
                        
                        <page string="⚠️ Omitidos" 
                            invisible="skipped_count == 0">
                            <group>
                                <field name="skipped_details" 
                                    nolabel="1" 
                                    widget="text"
                                    class="text-warning" />
                            </group>
                        </page>
                        
                        <page string="❌ Fallidos" 
                            invisible="failed_count == 0">
                            <group>
                                <field name="failed_details" 
                                    nolabel="1" 
                                    widget="text"
                                    class="text-danger" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Cerrar" 
                        type="object" 
                        name="action_close" 
                        class="btn-primary" />
                </footer>
            </form>
        </field>
    </record>

</odoo>

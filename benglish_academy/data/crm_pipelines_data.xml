    </record>

    <record id="stage_marketing_contact_attempted" model="crm.stage">
        <field name="name">Contacto Intentado</field>
        <field name="sequence">2</field>
        <field name="team_id" ref="crm_team_marketing" />
        <field name="fold">False</field>
        <field name="is_won">False</field>
    </record>

    <record id="stage_marketing_contacted" model="crm.stage">
        <field name="name">Contactado</field>
        <field name="sequence">3</field>
        <field name="team_id" ref="crm_team_marketing" />
        <field name="fold">False</field>
        <field name="is_won">False</field>

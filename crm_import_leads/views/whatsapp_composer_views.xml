<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Composer Wizard -->
    <record id="view_whatsapp_composer_form" model="ir.ui.view">
        <field name="name">whatsapp.composer.form</field>
        <field name="model">whatsapp.composer</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp">
                <sheet>
                    <group>
                        <group>
                            <field name="lead_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="template_id" placeholder="Select a template (optional)"/>
                            <field name="gateway_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="message" widget="text" placeholder="Type your message here..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send" string="Send" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_whatsapp_composer" model="ir.actions.act_window">
        <field name="name">Send WhatsApp</field>
        <field name="res_model">whatsapp.composer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

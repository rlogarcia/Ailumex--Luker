<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================ -->
        <!-- CRON: MONITOREO DE INACTIVIDAD - CORTESÍAS -->
        <!-- ============================================ -->

        <!-- 
            Tarea programada que se ejecuta diariamente para verificar 
            la inactividad de estudiantes con planes cortesía.
            
            Cancelación automática si:
            - Plan es cortesía (is_courtesy_plan = True)
            - Inactividad >= courtesy_inactivity_days (ej: 21 días = 3 semanas)
            - Estado activo/enrolled/in_progress
        -->

        <record id="cron_check_courtesy_inactivity" model="ir.cron">
            <field name="name">Verificar Inactividad de Planes Cortesía</field>
            <field name="model_id" ref="model_benglish_enrollment" />
            <field name="state">code</field>
            <field name="code">model._cron_check_courtesy_inactivity()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True" />
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_admin" />
        </record>

    </data>
</odoo>

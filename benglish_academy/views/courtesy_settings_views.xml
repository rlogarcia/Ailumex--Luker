<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_benglish_courtesy_settings_form" model="ir.ui.view">
        <field name="name">benglish.courtesy.settings.form</field>
        <field name="model">benglish.courtesy.settings</field>
        <field name="arch" type="xml">
            <form string="Planes Cortesía">
                <sheet>
                    <div class="oe_title">
                        <h1>Planes Cortesía</h1>
                        <p class="text-muted">
                            Regla única: si el estudiante inasiste o no agenda clases durante un periodo
                            igual o mayor al configurado, la cortesía se cancela automáticamente.
                        </p>
                    </div>
                    <group string="Cancelación por Inactividad">
                        <field name="courtesy_inactivity_cancel_days"/>
                    </group>
                    <group>
                        <div class="alert alert-info" role="alert">
                            <strong>Información:</strong>
                            <ul class="mb-0">
                                <li>Valor recomendado: 21 días (3 semanas).</li>
                                <li>Se considera “actividad” cuando el estudiante asiste o agenda una clase.</li>
                                <li>El cron de verificación se ejecuta diariamente a las 2:00 AM.</li>
                            </ul>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

                    <field name="space_label" optional="show" />
                    <field name="capacity" string="Cap." />
                    <field name="is_available" string="Disponible" />
                    <field name="has_projector" string="üìπ" widget="boolean" optional="show" />
                    <field name="has_computer" string="üíª" widget="boolean" optional="show" />
                    <field name="has_internet" string="üåê" widget="boolean" optional="show" />
                    <field name="has_audio_system" string="üîä" widget="boolean" optional="hide" />
                    <field name="has_air_conditioning" string="‚ùÑÔ∏è" widget="boolean" optional="hide" />
                    <field name="active" invisible="1" />
                </list>
            </field>
        </record>

        <!-- Vista de Formulario de Sub-sedes -->
        <record id="view_benglish_subcampus_form_v2" model="ir.ui.view">

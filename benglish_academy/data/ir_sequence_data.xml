<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Global simple sequences requested by the user -->
        <record id="seq_benglish_program" model="ir.sequence">
            <field name="name">Código Programa Benglish (PRG)</field>
            <field name="code">benglish.program</field>
            <field name="prefix">PRG-</field>
            <field name="padding">0</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="seq_benglish_plan" model="ir.sequence">
            <field name="name">Código Plan (P)</field>
            <field name="code">benglish.plan</field>
            <field name="prefix">P-</field>
            <field name="padding">0</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="seq_benglish_phase" model="ir.sequence">
            <field name="name">Código Fase (F)</field>
            <field name="code">benglish.phase</field>
            <field name="prefix">F-</field>
            <field name="padding">0</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="seq_benglish_level" model="ir.sequence">
            <field name="name">Código Nivel (N)</field>
            <field name="code">benglish.level</field>
            <field name="prefix">N-</field>
            <field name="padding">0</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="seq_benglish_subject" model="ir.sequence">
            <field name="name">Código Asignatura (A)</field>
            <field name="code">benglish.subject</field>
            <field name="prefix">A-</field>
            <field name="padding">0</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="seq_benglish_campus" model="ir.sequence">
            <field name="name">Código Sede (SE)</field>
            <field name="code">benglish.campus</field>
            <field name="prefix">SE-</field>
            <field name="padding">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <record id="seq_benglish_subcampus" model="ir.sequence">
            <field name="name">Código Aula/Subsede (AU)</field>
            <field name="code">benglish.subcampus</field>
            <field name="prefix">AU-</field>
            <field name="padding">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Secuencia para códigos de estudiantes -->
        <record id="sequence_student_code" model="ir.sequence">
            <field name="name">Código de Estudiante</field>
            <field name="code">benglish.student</field>
            <field name="prefix">EST-%(year)s-</field>
            <field name="padding">4</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Secuencia para batches de importación de estudiantes -->
        <record id="sequence_student_import_batch" model="ir.sequence">
            <field name="name">Importación de Estudiantes</field>
            <field name="code">benglish.student.import.batch</field>
            <field name="prefix">IMP-%(year)s-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Secuencia para códigos de matrícula -->
        <record id="sequence_enrollment_code" model="ir.sequence">
            <field name="name">Código de Matrícula</field>
            <field name="code">benglish.enrollment</field>
            <field name="prefix">MAT-%(year)s-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Secuencia para códigos de Horario Académico -->
        <record id="sequence_academic_agenda" model="ir.sequence">
            <field name="name">Código de Horario Académico (Planner)</field>
            <field name="code">benglish.academic.agenda</field>
            <field name="prefix">PL-</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Secuencia para códigos de Sesión Académica (Clases) -->
        <record id="sequence_academic_session" model="ir.sequence">
            <field name="name">Código de Sesión Académica</field>
            <field name="code">benglish.academic.session</field>
            <field name="prefix">SES-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>

    </data>
</odoo>
                                <field name="sequence" />
                                <field name="space_label" placeholder="Ej: Sal√≥n kids" />
                            </group>
                            <group string="üë• Disponibilidad">
                                <field name="capacity" string="Capacidad de estudiantes" />
                                <field name="is_available" widget="boolean_toggle" />
                                <field name="active" widget="boolean_toggle" />

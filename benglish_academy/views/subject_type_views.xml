<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista List (Lista) de Tipos de Asignatura -->
        <record id="view_benglish_subject_type_tree" model="ir.ui.view">
            <field name="name">benglish.subject.type.tree</field>
            <field name="model">benglish.subject.type</field>
            <field name="arch" type="xml">
                <list string="Tipos de Asignatura" default_order="sequence, name">
                    <field name="sequence" widget="handle" />
                    <field name="code" optional="show" />
                    <field name="name" />
                    <field name="description" optional="hide" />
                    <field name="subject_count" string="Asignaturas" />
                    <field name="active" invisible="1" />
                </list>
            </field>
        </record>

        <!-- Vista Form (Formulario) de Tipos de Asignatura -->
        <record id="view_benglish_subject_type_form" model="ir.ui.view">
            <field name="name">benglish.subject.type.form</field>
            <field name="model">benglish.subject.type</field>
            <field name="arch" type="xml">
                <form string="Tipo de Asignatura">
                    <sheet>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger"
                            invisible="active" />
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-book"
                                type="object" name="action_view_subjects">
                                <field name="subject_count" widget="statinfo" string="Asignaturas" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Nombre del tipo" />
                            </h1>
                        </div>
                        <group>
                            <group string="Información General">
                                <!-- <field name="code" />-->
                                <field name="sequence" />
                                <field name="color" widget="color_picker" />
                                <field name="active" />
                            </group>
                            <group string="Descripción">
                                <field name="description" nolabel="1"
                                    placeholder="Descripción del tipo de asignatura..." />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Search de Tipos de Asignatura -->
        <record id="view_benglish_subject_type_search" model="ir.ui.view">
            <field name="name">benglish.subject.type.search</field>
            <field name="model">benglish.subject.type</field>
            <field name="arch" type="xml">
                <search string="Buscar Tipos de Asignatura">
                    <field name="name" />
                    <field name="code" />
                    <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
                    <group expand="0" string="Agrupar por">
                        <filter string="Activo" name="group_active" context="{'group_by': 'active'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción para abrir Tipos de Asignatura -->
        <record id="action_benglish_subject_type" model="ir.actions.act_window">
            <field name="name">Tipos de Asignatura</field>
            <field name="res_model">benglish.subject.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer tipo de asignatura
                </p>
                <p>
                    Los tipos de asignatura permiten clasificar las asignaturas
                    según su naturaleza (Núcleo, Electiva, Complementaria, etc.)
                </p>
            </field>
        </record>

    </data>
</odoo>
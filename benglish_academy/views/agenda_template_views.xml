<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- =============================== -->
        <!-- Vistas: Plantillas de Agenda -->
        <!-- =============================== -->

        <record id="view_agenda_template_list" model="ir.ui.view">
            <field name="name">benglish.agenda.template.list</field>
            <field name="model">benglish.agenda.template</field>
            <field name="arch" type="xml">
                <list string="Plantillas de Horario">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="program_id"/>
                    <field name="subject_category"/>
                    <field name="skill_number"/>
                    <field name="mapping_mode"/>
                    <field name="alias_student"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_agenda_template_form" model="ir.ui.view">
            <field name="name">benglish.agenda.template.form</field>
            <field name="model">benglish.agenda.template</field>
            <field name="arch" type="xml">
                <form string="Plantilla de Horario">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="program_id"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="subject_category"/>
                                <field name="mapping_mode"/>
                                <field name="skill_number"
                                    invisible="subject_category != 'bskills'"/>
                                <field name="alias_student"/>
                            </group>
                        </group>
                        <group string="Reglas de Mapeo">
                            <group>
                                <field name="pair_size"
                                    invisible="mapping_mode != 'pair'"/>
                                <field name="block_size"
                                    invisible="mapping_mode != 'block'"/>
                            </group>
                            <group>
                                <field name="allow_next_pending"
                                    invisible="mapping_mode not in ('per_unit','pair')"/>
                                <field name="fixed_subject_id"
                                    invisible="mapping_mode != 'fixed'"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_agenda_template_search" model="ir.ui.view">
            <field name="name">benglish.agenda.template.search</field>
            <field name="model">benglish.agenda.template</field>
            <field name="arch" type="xml">
                <search string="Buscar Plantillas">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="program_id"/>
                    <field name="subject_category"/>
                    <field name="mapping_mode"/>
                    <filter string="Activas" name="filter_active" domain="[('active', '=', True)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter name="group_program" string="Programa"
                            context="{'group_by': 'program_id'}"/>
                        <filter name="group_category" string="CategorÃ­a"
                            context="{'group_by': 'subject_category'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_agenda_template" model="ir.actions.act_window">
            <field name="name">Plantillas de Horario</field>
            <field name="res_model">benglish.agenda.template</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

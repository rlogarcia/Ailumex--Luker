<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de formulario de hr.employee extendida con campo is_sales -->
    <record id="view_hr_employee_form_sales_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.sales.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">

            <!-- Añadir campo is_sales después de is_teacher -->
            <field name="is_teacher" position="after">
                <field name="is_sales" widget="boolean_toggle" />
            </field>

        </field>
    </record>

    <!-- Vista de lista de hr.employee - mostrar indicador de vendedor -->
    <record id="view_hr_employee_tree_sales_inherit" model="ir.ui.view">
        <field name="name">hr.employee.tree.sales.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree" />
        <field name="arch" type="xml">

            <field name="name" position="after">
                <field name="is_sales" string="Vendedor" optional="show" />
                <field name="is_teacher" string="Docente" optional="show" />
            </field>

        </field>
    </record>

    <!-- Filtro de búsqueda para vendedores -->
    <record id="view_hr_employee_filter_sales_inherit" model="ir.ui.view">
        <field name="name">hr.employee.search.sales.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter" />
        <field name="arch" type="xml">

            <filter name="inactive" position="before">
                <separator />
                <filter name="sales_employees" string="Vendedores"
                    domain="[('is_sales', '=', True)]" />
                <filter name="teachers" string="Docentes"
                    domain="[('is_teacher', '=', True)]" />
            </filter>

        </field>
    </record>

</odoo>
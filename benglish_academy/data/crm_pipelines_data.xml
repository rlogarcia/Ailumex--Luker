<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================
         PIPELINE DE MARKETING
         ======================================== -->

    <!-- Equipo de Marketing -->
    <record id="crm_team_marketing" model="crm.team">
        <field name="name">Marketing</field>
        <field name="sequence">1</field>
        <field name="use_leads">True</field>
        <field name="use_opportunities">True</field>
        <field name="company_id" ref="base.main_company" />
    </record>

    <!-- Etapas del Pipeline de Marketing -->
    <record id="stage_marketing_new_lead" model="crm.stage">
        <field name="name">Nuevo Lead</field>
        <field name="sequence">1</field>
        <field name="team_id" ref="crm_team_marketing" />

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista List de Tipos de Clase -->
        <record id="view_class_type_list" model="ir.ui.view">
            <field name="name">benglish.class.type.list</field>
            <field name="model">benglish.class.type</field>
            <field name="arch" type="xml">
                <list string="Tipos de Clase" default_order="sequence, name"
                      decoration-bf="is_mandatory">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="category" widget="badge"
                           decoration-success="category == 'bcheck'"
                           decoration-info="category == 'oral_test'"
                           decoration-warning="category == 'master_class'"/>
                    <field name="bcheck_subcategory" optional="show"/>
                    <field name="is_mandatory" widget="boolean_toggle"/>
                    <field name="is_first_class" widget="boolean_toggle" optional="hide"/>
                    <field name="updates_unit" widget="boolean_toggle" optional="hide"/>
                    <field name="requires_evaluation" widget="boolean_toggle" optional="hide"/>
                    <field name="default_capacity"/>
                    <field name="restricted_to_plans" optional="show"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Vista Form de Tipos de Clase -->
        <record id="view_class_type_form" model="ir.ui.view">
            <field name="name">benglish.class.type.form</field>
            <field name="model">benglish.class.type</field>
            <field name="arch" type="xml">
                <form string="Tipo de Clase">
                    <sheet>
                        <widget name="web_ribbon" title="Inactivo" bg_color="text-bg-danger" 
                                invisible="active"/>
                        <widget name="web_ribbon" title="OBLIGATORIA" bg_color="text-bg-success" 
                                invisible="not is_mandatory"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nombre de la clase"/>
                            </h1>
                            <div class="o_row">
                                <span class="badge text-bg-info">
                                    <i class="fa fa-tag"/> <field name="code" placeholder="Código"/>
                                </span>
                                <field name="category" widget="badge"
                                       decoration-success="category == 'bcheck'"
                                       decoration-info="category == 'oral_test'"
                                       decoration-warning="category == 'master_class'"/>
                            </div>
                        </div>
                        <group>
                            <group name="basic_info">
                                <field name="sequence"/>
                                <field name="category"/>
                                <field name="bcheck_subcategory" 
                                       invisible="category != 'bcheck'"
                                       required="category == 'bcheck'"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                            <group name="defaults">
                                <field name="default_capacity"/>
                                <field name="default_duration"/>
                                <field name="restricted_to_plans"/>
                            </group>
                        </group>
                        <group string="Características Especiales">
                            <group name="class_properties">
                                <field name="is_mandatory"/>
                                <field name="is_first_class"/>
                                <field name="updates_unit"/>
                            </group>
                            <group name="requirements">
                                <field name="requires_evaluation"/>
                                <field name="requires_prerequisite"/>
                                <field name="prerequisite_units" 
                                       invisible="not requires_prerequisite"
                                       placeholder="Ej: 4,8,12,16,20,24"/>
                            </group>
                        </group>
                        <group string="Prerrequisito para Horario (HU-E7, HU-E8)">
                            <group colspan="2">
                                <div class="alert alert-info mb-3" role="alert" style="margin-bottom: 12px;">
                                    <strong>ℹ️ Información:</strong> Estas opciones controlan el comportamiento de prerrequisitos en el portal del estudiante.
                                </div>
                                
                                <field name="is_prerequisite"/>
                                <div class="text-muted" style="font-size: 12px; margin-left: 24px; margin-top: -8px;">
                                    ✓ Si está marcado, los estudiantes deben agregar PRIMERO esta clase en su horario antes de poder 
                                    agregar cualquier otra en su semana. Típicamente usado para BCheck.
                                </div>
                                
                                <field name="enforce_prerequisite_first" 
                                       invisible="not is_prerequisite"
                                       class="mt-3"/>
                                <div class="text-muted" style="font-size: 12px; margin-left: 24px; margin-top: -8px;" 
                                     invisible="not is_prerequisite">
                                    ⚠️ Al quitar esta clase del horario, se eliminarán automáticamente todas las demás clases 
                                    de la semana del estudiante (con advertencia previa).
                                </div>
                            </group>
                        </group>
                        <group string="Aplicable a">
                            <group>
                                <field name="level_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="program_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripción" name="description">
                                <field name="description" placeholder="Descripción de la clase y sus objetivos..."/>
                            </page>
                            <page string="Notas" name="notes">
                                <field name="notes" placeholder="Notas adicionales..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Tipos de Clase -->
        <record id="view_class_type_kanban" model="ir.ui.view">
            <field name="name">benglish.class.type.kanban</field>
            <field name="model">benglish.class.type</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="category"/>
                    <field name="is_mandatory"/>
                    <field name="default_capacity"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i class="fa fa-list-alt"/> <field name="name"/>
                                        </strong>
                                        <span class="badge text-bg-secondary"><field name="code"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <span class="badge text-bg-primary">
                                                <field name="category"/>
                                            </span>
                                            <span class="badge text-bg-success" t-if="record.is_mandatory.raw_value">
                                                Obligatoria
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <i class="fa fa-users"/> Cap: <field name="default_capacity"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Acción de ventana -->
        <record id="action_class_type" model="ir.actions.act_window">
            <field name="name">Tipos de Clase</field>
            <field name="res_model">benglish.class.type</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo tipo de clase
                </p>
                <p>
                    Define los tipos de clases disponibles (B check, B skills, Oral test, etc.)
                </p>
            </field>
        </record>

        <!-- Menú: ya está definido en menus.xml como menu_benglish_class_type -->

    </data>
</odoo>

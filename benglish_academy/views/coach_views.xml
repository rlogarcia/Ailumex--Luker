<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista List de Coaches -->
        <record id="view_coach_list" model="ir.ui.view">
            <field name="name">benglish.coach.list</field>
            <field name="model">benglish.coach</field>
            <field name="arch" type="xml">
                <list string="Coaches" default_order="name">
                    <field name="code" />
                    <field name="name" />
                    <field name="email" />
                    <field name="phone" />
                    <field name="meeting_platform" widget="badge" />
                    <field name="active_groups" />
                    <field name="upcoming_session_count" string="Sesiones" />
                    <field name="is_active_teaching" widget="boolean_toggle" />
                    <field name="active" widget="boolean_toggle" />
                </list>
            </field>
        </record>

        <!-- Vista Form de Coaches -->
        <record id="view_coach_form" model="ir.ui.view">
            <field name="name">benglish.coach.form</field>
            <field name="model">benglish.coach</field>
            <field name="arch" type="xml">
                <form string="Coach">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sessions" type="object" class="oe_stat_button"
                                icon="fa-calendar">
                                <field name="upcoming_session_count" widget="statinfo"
                                    string="Sesiones próximas" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Inactivo" bg_color="text-bg-danger"
                            invisible="active" />
                        <widget name="web_ribbon" title="No Enseñando" bg_color="text-bg-warning"
                            invisible="is_active_teaching or not active" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre Completo del Coach" />
                            </h1>
                            <h3>
                                <field name="code" placeholder="Código (ej: COACH-001)" />
                            </h3>
                        </div>

                        <group>
                            <group string="Información de Contacto">
                                <field name="email" widget="email" />
                                <field name="phone" widget="phone" />
                                <field name="birth_date" />
                                <field name="identification_number" />
                            </group>
                            <group string="Información del Sistema">
                                <field name="username" />
                                <field name="user_id" />
                                <field name="is_active_teaching" />
                                <field name="active" />
                            </group>
                        </group>

                        <group string="Ubicación y Dirección">
                            <group string="Ubicación">
                                <field name="country_id" placeholder="País"
                                    options="{'no_create': True, 'no_open': True}" />
                                <field name="state_id" placeholder="Departamento/Estado"
                                    options="{'no_create': True, 'no_open': True}" />
                                <field name="city_id" placeholder="Ciudad"
                                    options="{'no_create': True, 'no_open': True}" />
                            </group>
                            <group string="Dirección">
                                <field name="street" placeholder="Dirección" />
                                <field name="street2" placeholder="Complemento" />
                                <field name="city" placeholder="Barrio/Zona" />
                                <field name="zip" />
                            </group>
                        </group>

                        <group string="Link de Reuniones (Solo Administrador)"
                            groups="benglish_academy.group_academic_manager">
                            <group>
                                <field name="meeting_link" widget="url"
                                    placeholder="https://meet.google.com/xxx-yyyy-zzz"
                                    readonly="not context.get('from_admin', True)" />
                                <field name="meeting_platform" />
                            </group>
                            <group>
                                <field name="meeting_id" />
                            </group>
                            <div class="alert alert-warning" role="alert">
                                <strong>Importante:</strong> El link de reuniones es único para el
                                coach y se hereda automáticamente en todas sus clases virtuales e
                                híbridas. </div>
                        </group>

                        <notebook>
                            <page string="Información Académica">
                                <group>
                                    <group>
                                        <field name="specialization" />
                                        <field name="experience_years" />
                                        <field name="max_classes_per_week" />
                                    </group>
                                    <group>
                                        <field name="total_classes" readonly="1" />
                                        <field name="active_groups" readonly="1" />
                                        <field name="upcoming_session_count" readonly="1" />
                                    </group>
                                </group>
                                <group>
                                    <field name="program_ids" widget="many2many_tags" />
                                    <field name="level_ids" widget="many2many_tags" />
                                    <field name="campus_ids" widget="many2many_tags" />
                                </group>
                            </page>
                            <page string="Notas">
                                <field name="notes"
                                    placeholder="Notas adicionales sobre el coach..." />
                            </page>
                            <page string="Sesiones">
                                <field name="session_ids" readonly="1">
                                    <list>
                                        <field name="start_datetime" />
                                        <field name="end_datetime" />
                                        <field name="campus_id" />
                                        <field name="state" widget="badge" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Coaches -->
        <record id="view_coach_kanban" model="ir.ui.view">
            <field name="name">benglish.coach.kanban</field>
            <field name="model">benglish.coach</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_order="name">
                    <field name="id" />
                    <field name="name" />
                    <field name="code" />
                    <field name="email" />
                    <field name="phone" />
                    <field name="meeting_platform" />
                    <field name="active_groups" />
                    <field name="is_active_teaching" />
                    <field name="active" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="ribbon ribbon-top-right" t-if="!record.active.raw_value">
                                    <span class="bg-danger">Inactivo</span>
                                </div>
                                <div class="ribbon ribbon-top-right"
                                    t-if="record.active.raw_value and !record.is_active_teaching.raw_value">
                                    <span class="bg-warning">No Enseñando</span>
                                </div>
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name" />
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="code" />
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <i class="fa fa-envelope" />
                                            <field name="email" />
                                        </div>
                                        <div class="col-12">
                                            <i class="fa fa-phone" />
                                            <field name="phone" />
                                        </div>
                                        <div class="col-12 mt-2">
                                            <span class="badge badge-pill badge-info">
                                                <i class="fa fa-video-camera" />
                                                <field name="meeting_platform" />
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <i class="fa fa-users" /> Grupos: <field
                                                name="active_groups" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Acción de ventana -->
        <record id="action_coach" model="ir.actions.act_window">
            <field name="name">Coaches</field>
            <field name="res_model">benglish.coach</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{}</field>
            <!-- Restringir acceso a Administradores del sistema para ocultar la acción a usuarios
            normales -->
            <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Crear un nuevo coach</p>
                <p>Gestiona los coaches/profesores que dictan clases en la academia</p>
            </field>
        </record>

        <!-- Menú: ya está definido en menus.xml como menu_benglish_coach -->

    </data>
</odoo>
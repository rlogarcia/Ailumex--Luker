  <!-- SEARCH: Vista de bÃºsqueda para grÃ¡ficos con medidas limitadas -->
  <record id="survey_user_input_search_ranking_graphs" model="ir.ui.view">
    <field name="name">survey.user_input.search.ranking.graphs</field>
    <field name="model">survey.user_input</field>
    <field name="priority">30</field>
    <field name="arch" type="xml">
      <search string="Buscar Ranking">

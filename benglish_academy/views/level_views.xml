            <field name="model">benglish.level</field>
            <field name="arch" type="xml">
                <form string="Nivel AcadÃ©mico">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_subjects" type="object"
                                class="oe_stat_button" icon="fa-book-open"
                                style="background-color: #007bff; color: white;">
                                <field name="subject_count" widget="statinfo" string="Asignaturas" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger"
                            invisible="active" />

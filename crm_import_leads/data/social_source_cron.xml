<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_lead_social_source_cron" model="ir.cron">
        <field name="name">Importar leads desde redes sociales</field>
        <field name="model_id" ref="model_crm_lead_social_source"/>
        <field name="state">code</field>
        <field name="code">model.cron_fetch_leads()</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>

    <record id="crm_lead_scoring_cron" model="ir.cron">
        <field name="name">Recalcular puntuaci√≥n de leads</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">model.cron_recalculate_lead_scores()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>

    <record id="crm_lead_inactivity_cron" model="ir.cron">
        <field name="name">Seguimiento de oportunidades sin actividad</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_inactive_opportunities()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>

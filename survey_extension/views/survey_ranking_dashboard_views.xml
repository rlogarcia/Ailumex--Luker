  <!-- FORM: AÃ±adir informaciÃ³n de ranking en participaciÃ³n -->
  <record id="survey_user_input_form_ranking" model="ir.ui.view">
    <field name="name">survey.user_input.form.ranking</field>
    <field name="model">survey.user_input</field>

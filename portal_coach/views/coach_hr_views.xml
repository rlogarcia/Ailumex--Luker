<?xml version='1.0' encoding='utf-8'?>
<odoo>

<!-- Vista formulario del coach con campos HR -->
<record id='benglish_coach_form_hr' model='ir.ui.view'>
    <field name='name'>benglish.coach.form.hr</field>
    <field name='model'>benglish.coach</field>
    <field name='inherit_id' ref='benglish_academy.view_coach_form'/>
    <field name='arch' type='xml'>
        
        <!-- Agregar campo Empleado despues del campo de usuario -->
        <field name='user_id' position='after'>
            <field name='employee_id'/>
        </field>
        
        <!-- Agregar pagina de informacion laboral -->
        <xpath expr='//notebook' position='inside'>
            <page string='Informacion Laboral' name='hr_info'>
                <group>
                    <group string='Datos del Empleado'>
                        <field name='employee_id'/>
                        <!--<field name='job_id'/>-->
                        <field name='department_id'/>
                    </group>
                    <group string='Contacto Laboral'>
                        <field name='work_email'/>
                        <field name='work_phone'/>
                    </group>
                </group>
            </page>
        </xpath>
        
    </field>
</record>

</odoo>

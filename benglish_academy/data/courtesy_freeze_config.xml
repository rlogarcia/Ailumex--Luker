<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================ -->
        <!-- CONFIGURACIÓN DE CONGELAMIENTO - PLANES CORTESÍA -->
        <!-- ============================================ -->

        <!-- Los planes cortesía NO permiten congelamiento según las reglas de negocio -->

        <!-- Cortesía Virtual - Benglish -->
        <record id="freeze_config_benglish_cortesia_virtual" model="benglish.plan.freeze.config">
            <field name="plan_id" ref="plan_benglish_cortesia_virtual" />
            <field name="permite_congelamiento" eval="False" />
            <field name="min_dias_congelamiento">0</field>
            <field name="max_dias_congelamiento">1</field>
            <field name="max_dias_acumulados">1</field>
            <field name="requiere_pago_al_dia" eval="False" />
            <field name="descripcion">Los planes CORTESÍA no permiten congelamiento. En caso de inactividad mayor a 3 semanas, la cortesía se cancela automáticamente.</field>
            <field name="active" eval="True" />
        </record>


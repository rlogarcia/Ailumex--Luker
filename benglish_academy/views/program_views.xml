<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista list (Lista) de Programas -->
        <record id="view_benglish_program_list" model="ir.ui.view">
            <field name="name">benglish.program.list</field>
            <field name="model">benglish.program</field>
            <field name="arch" type="xml">
                <list string="Programas Acad√©micos" default_order="sequence, name"
                    decoration-muted="not active">
                    <field name="sequence" widget="handle" />
                    <field name="code" />
                    <field name="name" />
                    <field name="plan_count" string="Planes" />
                    <field name="active" invisible="1" />
                    <button name="action_view_plans" type="object" string="Ver Planes"
                        class="btn-primary" icon="fa-book"
                        invisible="plan_count == 0" />
                </list>
            </field>
        </record>

        <!-- Vista Form (Formulario) de Programas -->
        <record id="view_benglish_program_form" model="ir.ui.view">
            <field name="name">benglish.program.form</field>
            <field name="model">benglish.program</field>
            <field name="arch" type="xml">
                <form string="Programa Acad√©mico">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_plans" type="object"
                                class="oe_stat_button" icon="fa-book"
                                style="background-color: #17a2b8; color: white;">
                                <field name="plan_count" widget="statinfo"
                                    string="Planes de Estudio" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger"
                            invisible="active" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Ej: Programa de Ingl√©s General" />
                            </h1>
                            <div class="o_row">
                                <span class="badge text-bg-info">
                                    <field name="code" placeholder="C√≥digo" />
                                </span>
                            </div>
                        </div>
                        <group>
                            <group string="üìã Informaci√≥n B√°sica">
                                <field name="sequence" />
                                <field name="active" widget="boolean_toggle" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripci√≥n">
                                <field name="description"
                                    placeholder="Descripci√≥n detallada del programa acad√©mico..." />
                            </page>
                            <page string="Planes de Estudio">
                                <field name="plan_ids" context="{'default_program_id': id}">
                                    <list>
                                        <field name="sequence" widget="handle" />
                                        <field name="code" />
                                        <field name="name" />
                                        <field name="duration_months" />
                                        <field name="phase_count" />
                                        <field name="active" widget="boolean_toggle" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Programas -->
        <record id="view_benglish_program_kanban" model="ir.ui.view">
            <field name="name">benglish.program.kanban</field>
            <field name="model">benglish.program</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name" />
                    <field name="code" />
                    <field name="plan_count" />
                    <field name="active" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings"
                                        style="display:flex; flex-direction:column; align-items:flex-start;">
                                        <strong class="o_kanban_record_title" style="display:block;">
                                            <field name="name" />
                                        </strong>
                                        <div style="margin-top: 2px;">
                                            <span class="badge text-bg-primary"
                                                style="font-size:13px; color:#fff; display:inline-block;">
                                                <field name="code" />
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="badge text-bg-info">
                                        <i class="fa fa-book" /> <field name="plan_count" /> Planes </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista de B√∫squeda de Programas -->
        <record id="view_benglish_program_search" model="ir.ui.view">
            <field name="name">benglish.program.search</field>
            <field name="model">benglish.program</field>
            <field name="arch" type="xml">
                <search string="Buscar Programas">
                    <field name="name" string="Programa"
                        filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" />
                    <field name="code" />
                    <separator />
                    <filter string="Activos" name="active" domain="[('active', '=', True)]" />
                    <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
                    <group expand="0" string="Agrupar por">
                        <filter string="Estado" name="group_by_active"
                            context="{'group_by': 'active'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- Acci√≥n de Ventana para Programas -->
        <record id="action_benglish_program" model="ir.actions.act_window">
            <field name="name">Programas Acad√©micos</field>
            <field name="res_model">benglish.program</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    üéØ Crear tu primer Programa Acad√©mico
                </p>
                <p>
                    <strong>Los programas acad√©micos</strong> son el nivel m√°s alto de la estructura
                    curricular.<br />
                    <em>Ejemplos:</em> Programa de Ingl√©s General, Programa de
                    Ingl√©s de Negocios, TOEFL Preparation, etc. </p>
            </field>
        </record>

        <!-- Acci√≥n: Actualizar C√≥digos Acad√©micos desde Programa -->
        <record id="action_update_academic_codes_from_program" model="ir.actions.server">
            <field name="name">Actualizar C√≥digos Acad√©micos</field>
            <field name="model_id" ref="model_benglish_program" />
            <field name="binding_model_id" ref="model_benglish_program" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = env['benglish.update.academic.codes'].create({}).action_update_codes()
            </field>
        </record>

    </data>
</odoo>
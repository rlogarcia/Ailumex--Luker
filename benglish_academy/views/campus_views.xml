<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista list (Lista) de Sedes -->
        <record id="view_benglish_campus_list" model="ir.ui.view">
            <field name="name">benglish.campus.list</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <list string="Sedes" default_order="sequence, name"
                    decoration-muted="not active"
                    decoration-info="campus_type == 'branch'"
                    decoration-warning="campus_type == 'online'">
                    <field name="sequence" widget="handle" />
                    <field name="code" />
                    <field name="name" />
                    <field name="city_name" string="Ciudad" />
                    <field name="department_name" string="Departamento" optional="show" />
                    <field name="campus_type" widget="badge"
                        decoration-info="campus_type == 'branch'"
                        decoration-warning="campus_type == 'online'" />
                    <field name="subcampus_count" string="Aulas" />
                    <field name="total_capacity" string="Capacidad Total" />
                    <field name="manager_id" widget="many2one_avatar_user" />
                    <field name="active" invisible="1" />
                    <button name="action_view_subcampus" type="object" string="Ver Aulas"
                        class="btn-info" icon="fa-building"
                        invisible="subcampus_count == 0" />
                </list>
            </field>
        </record>

        <!-- Vista Form (Formulario) de Sedes -->
        <record id="view_benglish_campus_form_v2" model="ir.ui.view">
            <field name="name">benglish.campus.form.v2</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <form string="Sede">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_subcampus" type="object"
                                class="oe_stat_button" icon="fa-building">
                                <field name="subcampus_count" widget="statinfo" string="Aulas" />
                            </button>
                            <button name="action_view_sessions" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                                <field name="session_count" widget="statinfo" string="Sesiones" />
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger"
                            invisible="active" />
                        <widget name="web_ribbon" title="SEDE VIRTUAL" bg_color="text-bg-warning"
                            invisible="campus_type != 'online'" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Ej: Sede Norte" />
                            </h1>
                            <div class="o_row">
                                <label for="code" class="fw-bold me-2">C√≥digo:</label>
                                <field name="code" readonly="1" class="fw-bold text-primary"
                                    style="min-width: 100px; display: inline-block;" />
                                <field name="campus_type" widget="badge"
                                    decoration-info="campus_type == 'branch'"
                                    decoration-warning="campus_type == 'online'" />
                            </div>
                        </div>
                        <group>
                            <group string="üìÑ Informaci√≥n B√°sica">
                                <field name="active" widget="boolean_toggle" />
                                <field name="is_virtual_sede" widget="boolean_toggle" />
                                <field name="manager_id" widget="many2one_avatar_user"
                                    string="Coordinador" />
                                <field name="sequence" />
                            </group>
                            <group string="üìè Capacidad"
                                invisible="is_virtual_sede or campus_type == 'online'">
                                <field name="total_capacity"
                                    string="Capacidad Total (suma de aulas)" readonly="1" />
                                <field name="subcampus_count" string="N√∫mero de Aulas" readonly="1" />
                            </group>
                        </group>
                        <group string="üìç Informaci√≥n de Ubicaci√≥n y Contacto"
                            invisible="is_virtual_sede or campus_type == 'online'">
                            <group string="Ubicaci√≥n">
                                <field name="country_id" placeholder="Pa√≠s"
                                    options="{'no_create': True, 'no_open': True}" />
                                <field name="state_id" placeholder="Departamento/Estado"
                                    options="{'no_create': True, 'no_open': True}" />
                                <field name="city_id" placeholder="Ciudad"
                                    options="{'no_create': True, 'no_open': True}" />
                            </group>
                            <group string="Direcci√≥n y Contacto">
                                <field name="direccion" placeholder="Direcci√≥n completa de la sede" />
                                <field name="zip" placeholder="C√≥digo postal" />
                                <field name="phone" widget="phone" placeholder="+57 300 123 4567" />
                                <field name="email" widget="email"
                                    placeholder="contacto@benglish.com" />
                            </group>
                        </group>
                        <notebook>
                            <page string="‚è∞ Configuraci√≥n de Horario" name="schedule_config"
                                priority="1">
                                <group>
                                    <group string="üïê Horario General de Operaci√≥n">
                                        <label for="schedule_start_time"
                                            string="Horario General de Operaci√≥n" />
                                        <div class="o_row">
                                            <field name="schedule_start_time" widget="float_time"
                                                class="oe_inline" />
                                            <span class="mx-2">hasta</span>
                                            <field name="schedule_end_time" widget="float_time"
                                                class="oe_inline" />
                                        </div>
                                        <field name="schedule_summary" readonly="1"
                                            class="text-muted font-italic" />
                                        <field name="default_session_duration"
                                            help="Duraci√≥n est√°ndar en horas para las sesiones" />
                                        <field name="class_duration_text"
                                            placeholder="Ej: 50' cada una" />
                                        <field name="schedule_text"
                                            placeholder="Descripci√≥n del horario general..." />
                                        <div class="alert alert-info mb-3" role="alert">
                                            <strong>‚ÑπÔ∏è L√≥gica de Horarios:</strong><br /> ‚Ä¢ El <b>Horario
                                            General de Operaci√≥n</b> define el rango m√°ximo de horas
                                            que la sede puede operar.<br /> ‚Ä¢ Los <b>Horarios por
                                                D√≠a</b> deben estar <u>dentro</u> del horario
                                            general y permiten configurar horarios espec√≠ficos para
                                            cada d√≠a.<br /> ‚Ä¢ Si un d√≠a tiene horario en 00:00, se
                                            usar√° el horario general como horario de ese d√≠a. </div>

                                    </group>
                                    <group string="üìÖ D√≠as Permitidos y Horarios Espec√≠ficos">
                                        <group string="Lunes - Domingo">
                                            <field name="allow_monday" widget="boolean_toggle" />
                                            <label for="monday_start_time" string="Horario Lunes"
                                                invisible="not allow_monday" />
                                            <div class="o_row" invisible="not allow_monday">
                                                <field name="monday_start_time" widget="float_time"
                                                    class="oe_inline" placeholder="Inicio" />
                                                <span class="mx-1">-</span>
                                                <field name="monday_end_time" widget="float_time"
                                                    class="oe_inline" placeholder="Fin" />
                                            </div>
                                            <field name="allow_tuesday" widget="boolean_toggle" />
                                            <label for="tuesday_start_time" string="Horario Martes"
                                                invisible="not allow_tuesday" />
                                            <div class="o_row" invisible="not allow_tuesday">
                                                <field name="tuesday_start_time" widget="float_time"
                                                    class="oe_inline" placeholder="Inicio" />
                                                <span class="mx-1">-</span>
                                                <field name="tuesday_end_time" widget="float_time"
                                                    class="oe_inline" placeholder="Fin" />
                                            </div>
                                            <field name="allow_wednesday" widget="boolean_toggle" />
                                            <label for="wednesday_start_time"
                                                string="Horario Mi√©rcoles"
                                                invisible="not allow_wednesday" />
                                            <div class="o_row" invisible="not allow_wednesday">
                                                <field name="wednesday_start_time"
                                                    widget="float_time"
                                                    class="oe_inline" placeholder="Inicio" />
                                                <span class="mx-1">-</span>
                                                <field name="wednesday_end_time" widget="float_time"
                                                    class="oe_inline" placeholder="Fin" />
                                            </div>
                                            <field name="allow_thursday" widget="boolean_toggle" />
                                            <label for="thursday_start_time" string="Horario Jueves"
                                                invisible="not allow_thursday" />
                                            <div class="o_row" invisible="not allow_thursday">
                                                <field name="thursday_start_time"
                                                    widget="float_time"
                                                    class="oe_inline" placeholder="Inicio" />
                                                <span class="mx-1">-</span>
                                                <field name="thursday_end_time" widget="float_time"
                                                    class="oe_inline" placeholder="Fin" />
                                            </div>
                                            <field name="allow_friday" widget="boolean_toggle" />
                                            <label for="friday_start_time" string="Horario Viernes"
                                                invisible="not allow_friday" />
                                            <div class="o_row" invisible="not allow_friday">
                                                <field name="friday_start_time" widget="float_time"
                                                    class="oe_inline" placeholder="Inicio" />
                                                <span class="mx-1">-</span>
                                                <field name="friday_end_time" widget="float_time"
                                                    class="oe_inline" placeholder="Fin" />
                                            </div>
                                            <field name="allow_saturday" widget="boolean_toggle" />
                                            <label for="saturday_start_time" string="Horario S√°bado"
                                                invisible="not allow_saturday" />
                                            <div class="o_row" invisible="not allow_saturday">
                                                <field name="saturday_start_time"
                                                    widget="float_time"
                                                    class="oe_inline" placeholder="Inicio" />
                                                <span class="mx-1">-</span>
                                                <field name="saturday_end_time" widget="float_time"
                                                    class="oe_inline" placeholder="Fin" />
                                            </div>
                                            <field name="allow_sunday" widget="boolean_toggle" />
                                            <label for="sunday_start_time" string="Horario Domingo"
                                                invisible="not allow_sunday" />
                                            <div class="o_row" invisible="not allow_sunday">
                                                <field name="sunday_start_time" widget="float_time"
                                                    class="oe_inline" placeholder="Inicio" />
                                                <span class="mx-1">-</span>
                                                <field name="sunday_end_time" widget="float_time"
                                                    class="oe_inline" placeholder="Fin" />
                                            </div>
                                        </group>
                                    </group>
                                </group>
                                <div class="alert alert-warning" role="alert">
                                    <strong>‚ö†Ô∏è Importante:</strong> Las sesiones que no cumplan con
                                    estas restricciones de horario ser√°n rechazadas autom√°ticamente. </div>
                            </page>
                            <page string="üè¢ Aulas" name="subcampus"
                                invisible="is_virtual_sede or campus_type == 'online'">
                                <div class="alert alert-warning" role="alert">
                                    <strong>‚ö†Ô∏è Nota:</strong> Las aulas se gestionan desde el men√∫
                                    de Aulas. Aqu√≠ solo puede visualizar las aulas asociadas a esta
                                    sede. </div>
                                <field name="subcampus_ids" readonly="1">
                                    <list create="0" edit="0" delete="0">
                                        <field name="code" />
                                        <field name="name" />
                                        <field name="subcampus_type" />
                                        <field name="modality" widget="badge"
                                            decoration-success="modality == 'presential'"
                                            decoration-info="modality == 'virtual'"
                                            decoration-warning="modality == 'hybrid'" />
                                        <field name="capacity" string="Capacidad" />
                                        <field name="is_available" widget="boolean_toggle" />
                                        <field name="active" widget="boolean_toggle" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Sedes -->
        <record id="view_benglish_campus_kanban" model="ir.ui.view">
            <field name="name">benglish.campus.kanban</field>
            <field name="model">benglish.campus</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name" />
                    <field name="code" />
                    <field name="city_name" />
                    <field name="campus_type" />
                    <field name="subcampus_count" />
                    <field name="total_capacity" />
                    <field name="manager_id" />
                    <field name="active" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title" style="display:block;">
                                            <i class="fa fa-building" />
                                            <field name="name" />
                                        </strong>
                                        <div style="margin-top: 2px;">
                                            <span class="badge text-bg-secondary"
                                                style="font-size:13px; color:#888; display:inline-block;">
                                                <field name="code" />
                                            </span>
                                        </div>
                                    </div>
                                    <span t-if="record.campus_type.raw_value == 'branch'"
                                        class="badge text-bg-info">Presencial</span>
                                    <span t-if="record.campus_type.raw_value == 'online'"
                                        class="badge text-bg-warning">Virtual</span>

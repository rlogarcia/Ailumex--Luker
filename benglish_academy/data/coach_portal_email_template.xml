<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Plantilla de correo para acceso portal del coach -->
        <record id="email_template_coach_portal_access" model="mail.template">
            <field name="name">Coach - Acceso Portal</field>
            <field name="model_id" ref="benglish_academy.model_benglish_coach"/>
            <field name="subject">Bienvenido al Portal del Coach - B English Academy</field>
            <field name="email_from">${(object.company_id.email or user.email_formatted) | safe}</field>
            <field name="email_to">${object.email | safe}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-family: Arial, Helvetica, sans-serif; font-size: 14px;">
    <table border="0" width="100%" cellpadding="0" bgcolor="#F5F6F7" style="padding: 20px;">
        <tbody>
            <tr>
                <td align="center" style="min-width: 590px;">
                    <table border="0" width="590" cellpadding="0" bgcolor="#FFFFFF" style="padding: 20px; border: 1px solid #e1e1e1;">
                        <tbody>
                            <tr>
                                <td>
                                    <h2 style="color: #0C4284; margin-bottom: 20px;">
                                        ¡Bienvenido al Portal del Coach!
                                    </h2>
                                    
                                    <p>Hola <strong>${object.name}</strong>,</p>
                                    
                                    <p>
                                        Se ha creado tu acceso al Portal del Coach de <strong>B English Academy</strong>. 
                                        Desde este portal podrás:
                                    </p>
                                    
                                    <ul>
                                        <li>Consultar tu horario de clases</li>
                                        <li>Ver tus grupos asignados</li>
                                        <li>Acceder a los enlaces de tus sesiones virtuales</li>
                                        <li>Tomar asistencia de tus estudiantes</li>
                                        <li>Actualizar tu información de perfil</li>
                                    </ul>
                                    
                                    <div style="margin: 30px 0; padding: 20px; background-color: #f8f9fa; border-left: 4px solid #0C4284;">
                                        <p style="margin: 0;"><strong>Tus credenciales de acceso:</strong></p>
                                        <p style="margin: 10px 0 5px 0;">
                                            <strong>Usuario:</strong> ${object.email}
                                        </p>
                                        <p style="margin: 5px 0;">
                                            <strong>Contraseña:</strong> Deberás crear una contraseña en tu primer acceso
                                        </p>
                                    </div>
                                    
                                    <p style="text-align: center; margin: 30px 0;">
                                        <a href="${object.get_base_url()}/my/coach" 
                                           style="background-color: #0C4284; color: white; padding: 12px 30px; 
                                                  text-decoration: none; border-radius: 5px; display: inline-block;">
                                            Acceder al Portal
                                        </a>
                                    </p>
                                    
                                    <p style="color: #dc3545; font-weight: bold;">
                                        ⚠️ Importante: En tu primer acceso deberás crear una contraseña segura.
                                    </p>
                                    
                                    <hr style="margin: 30px 0; border: none; border-top: 1px solid #e1e1e1;"/>
                                    
                                    <p style="font-size: 12px; color: #6c757d;">
                                        Si tienes alguna pregunta o problema con el acceso, 
                                        por favor contacta al administrador del sistema.
                                    </p>
                                    
                                    <p style="font-size: 12px; color: #6c757d; margin-top: 20px;">
                                        <strong>B English Academy</strong><br/>
                                        Este es un correo automático, por favor no respondas a este mensaje.
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
        
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron Job: Limpieza de OTPs expirados -->
    <record id="cron_cleanup_expired_otps" model="ir.cron">
        <field name="name">Benglish: Limpiar OTPs Expirados</field>
        <field name="model_id" ref="model_benglish_password_reset"/>
        <field name="state">code</field>
        <field name="code">model.cleanup_expired_otps()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="priority">50</field>
    </record>
</odoo>

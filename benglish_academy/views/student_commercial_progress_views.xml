    <record id="view_student_commercial_progress_list" model="ir.ui.view">
        <field name="name">benglish.student.commercial.progress.list</field>
        <field name="model">benglish.student.commercial.progress</field>
        <field name="arch" type="xml">
            <list string="Progreso Comercial por Nivel"
                decoration-success="level_status == 'completed'"
                decoration-info="level_status == 'in_progress'"
                decoration-muted="level_status == 'not_started'"
                create="false" delete="false">
                <field name="level_sequence" string="Nivel #" />
                <field name="level_id" />
                <field name="phase_id" optional="hide" />
                <!-- Esperados -->
                <field name="expected_selection" string="Sel. Esp." />
                <field name="expected_oral_test" string="OT Esp." />
                <field name="expected_electives" string="Elec. Esp." />
                <field name="expected_bskills" string="BS Esp." optional="hide" />
                <field name="expected_total" string="Total Esp." decoration-bf="1" />
                <!-- Completados -->
                <field name="completed_selection" string="Sel. Comp." />
                <field name="completed_oral_test" string="OT Comp." />
                <field name="completed_electives" string="Elec. Comp." />
                <field name="completed_bskills" string="BS Comp." optional="hide" />
                <field name="completed_total" string="Total Comp." decoration-bf="1" />
                <!-- Progreso -->
                <field name="progress_percentage" string="% Avance" widget="progressbar" />
                <field name="level_status" widget="badge"
                    decoration-success="level_status == 'completed'"
                    decoration-info="level_status == 'in_progress'"
                    decoration-warning="level_status == 'not_started'" />
            </list>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
         VISTA FORM - PROGRESO COMERCIAL
         ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <record id="view_student_commercial_progress_form" model="ir.ui.view">
        <field name="name">benglish.student.commercial.progress.form</field>
        <field name="model">benglish.student.commercial.progress</field>
        <field name="arch" type="xml">
            <form string="Progreso Comercial" create="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <label for="display_name" />
                        <h1>
                            <field name="display_name" readonly="1" />
                        </h1>
                    </div>

                    <group>
                        <group string="Informaci√≥n del Estudiante">
                            <field name="enrollment_id" readonly="1" />
                            <field name="student_id" readonly="1" />
                            <field name="commercial_plan_id" readonly="1" />
                        </group>
                        <group string="Nivel">
                            <field name="level_id" readonly="1" />
                            <field name="level_sequence" readonly="1" />
                            <field name="phase_id" readonly="1" />
                            <field name="level_status" widget="badge"
                                decoration-success="level_status == 'completed'"
                                decoration-info="level_status == 'in_progress'"
                                decoration-warning="level_status == 'not_started'" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Detalle de Avance" name="progress_detail">
                            <group>
                                <group string="üìã Esperado (Plan Comercial)">
                                    <field name="expected_selection" readonly="1" />
                                    <field name="expected_oral_test" readonly="1" />
                                    <field name="expected_electives" readonly="1" />
                                    <field name="expected_regular" readonly="1" />
                                    <field name="expected_bskills" readonly="1" />
                                    <field name="expected_total" readonly="1" decoration-bf="1" />
                                </group>
                                <group string="‚úÖ Completado">
                                    <field name="completed_selection" />
                                    <field name="completed_oral_test" />
                                    <field name="completed_electives" />
                                    <field name="completed_regular" />
                                    <field name="completed_bskills" />
                                    <field name="completed_total" readonly="1" decoration-bf="1" />
                                </group>
                            </group>
                            <group>
                                <group string="‚è≥ Pendiente">
                                    <field name="pending_selection" readonly="1" />
                                    <field name="pending_oral_test" readonly="1" />
                                    <field name="pending_electives" readonly="1" />
                                    <field name="pending_regular" readonly="1" />
                                    <field name="pending_bskills" readonly="1" />
                                    <field name="pending_total" readonly="1" decoration-bf="1" />
                                </group>
                                <group string="üìä Porcentaje de Avance">
                                    <field name="progress_percentage" widget="progressbar" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>


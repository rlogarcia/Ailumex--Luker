<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template para Cambiar Contraseña - Estilo Portal Coach -->
    <template id="change_password_template" name="Cambiar Contraseña">
        <t t-call="portal.portal_layout">
            <t t-set="page_name" t-value="'change_password'"/>
            
            <!-- Estilo para eliminar padding del portal layout -->
            <style>
                .o_portal_wrap {
                    padding: 0 !important;
                }
            </style>
            
            <!-- Header full width con logo -->
            <div style="
    background: linear-gradient(135deg, #1e3a8a 0%, #2563eb 100%);
    padding: 18px 32px;
    width: 100%;
">
    <div style="
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
    ">
        <!-- Logo -->
        <img
            src="/portal_coach/static/src/img/benglish_logo.png"
            alt="Benglish America"
            style="height: 48px;"
        />

        <!-- Título -->
        <div style="
            display: flex;
            align-items: center;
            gap: 12px;
            font-family: 'Inter', 'Segoe UI', 'Roboto', sans-serif;
        ">
            <i class="fa fa-key"
               style="color: rgba(255,255,255,0.85); font-size: 26px;"></i>

            <div>
                <h1 style="
                    color: #ffffff;
                    margin: 0;
                    font-size: 18px;
                    font-weight: 600;
                    letter-spacing: 0.3px;
                ">
                    Cambiar contraseña
                </h1>

                <p style="
                    color: rgba(255,255,255,0.75);
                    margin: 2px 0 0 0;
                    font-size: 12px;
                    font-weight: 400;
                ">
                    Actualiza tu acceso de forma segura
                </p>
            </div>
        </div>
    </div>
</div>
            
            <!-- Espaciador -->
            <div style="height: 32px;"></div>
            
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 offset-lg-3">
                        
                        <!-- Mensaje de éxito (si viene de cambio exitoso) -->
                        <t t-if="success == 'password_changed'">
                            <div class="alert alert-success" role="alert" style="border-radius: 12px; border-left: 4px solid #10b981;">
                                <i class="fa fa-check-circle"></i>
                                <strong>¡Contraseña cambiada exitosamente!</strong>
                                <p style="margin: 8px 0 0 0;">Tu contraseña ha sido actualizada correctamente.</p>
                            </div>
                        </t>
                        
                        <!-- Mensajes de error -->
                        <t t-if="error">
                            <div class="alert alert-danger" role="alert" style="border-radius: 12px; border-left: 4px solid #ef4444;">
                                <i class="fa fa-exclamation-circle"></i>
                                <strong>Error:</strong>
                                <p style="margin: 8px 0 0 0;">
                                    <t t-if="error == 'no_match'">Las contraseñas nuevas no coinciden.</t>
                                    <t t-if="error == 'wrong_password'">La contraseña actual es incorrecta.</t>
                                    <t t-if="error == 'too_short'">La nueva contraseña debe tener al menos 8 caracteres.</t>
                                </p>
                            </div>
                        </t>
                        
                        <!-- Formulario -->
                        <div class="card" style="border: none; border-radius: 16px; box-shadow: 0 4px 6px rgba(0,0,0,0.07);">
                            <div class="card-body" style="padding: 32px;">
                                <form action="/my/coach/change_password/submit" method="POST">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    
                                    <!-- Contraseña Actual -->
                                    <div class="form-group mb-4">
                                        <label for="old_password" style="font-weight: 600; color: #1f2937; margin-bottom: 8px;">
                                            <i class="fa fa-lock" style="color: #6b7280; margin-right: 8px;"></i>
                                            Contraseña Actual
                                        </label>
                                        <input type="password" 
                                               class="form-control" 
                                               id="old_password" 
                                               name="old_password" 
                                               required="required"
                                               style="padding: 12px 16px; border-radius: 8px; border: 2px solid #e5e7eb; font-size: 15px;"
                                               placeholder="Ingresa tu contraseña actual"/>
                                    </div>
                                    
                                    <!-- Nueva Contraseña -->
                                    <div class="form-group mb-4">
                                        <label for="new_password" style="font-weight: 600; color: #1f2937; margin-bottom: 8px;">
                                            <i class="fa fa-key" style="color: #6b7280; margin-right: 8px;"></i>
                                            Nueva Contraseña
                                        </label>
                                        <input type="password" 
                                               class="form-control" 
                                               id="new_password" 
                                               name="new_password" 
                                               required="required"
                                               minlength="8"
                                               style="padding: 12px 16px; border-radius: 8px; border: 2px solid #e5e7eb; font-size: 15px;"
                                               placeholder="Mínimo 8 caracteres"/>
                                        <small class="form-text text-muted" style="margin-top: 8px;">
                                            <i class="fa fa-info-circle"></i> La contraseña debe tener al menos 8 caracteres
                                        </small>
                                    </div>
                                    
                                    <!-- Confirmar Nueva Contraseña -->
                                    <div class="form-group mb-4">
                                        <label for="confirm_password" style="font-weight: 600; color: #1f2937; margin-bottom: 8px;">
                                            <i class="fa fa-check" style="color: #6b7280; margin-right: 8px;"></i>
                                            Confirmar Nueva Contraseña
                                        </label>
                                        <input type="password" 
                                               class="form-control" 
                                               id="confirm_password" 
                                               name="confirm_password" 
                                               required="required"
                                               minlength="8"
                                               style="padding: 12px 16px; border-radius: 8px; border: 2px solid #e5e7eb; font-size: 15px;"
                                               placeholder="Repite la nueva contraseña"/>
                                    </div>
                                    
                                    <!-- Botones -->
                                    <div style="display: flex; gap: 12px; margin-top: 32px;">
                                        <button type="submit" 
                                                class="btn btn-primary" 
                                                style="flex: 1; padding: 14px; border-radius: 8px; font-weight: 600; font-size: 15px; background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%); border: none; box-shadow: 0 2px 4px rgba(59,130,246,0.3);">
                                            <i class="fa fa-save"></i> Cambiar Contraseña
                                        </button>
                                        <a href="/my/coach" 
                                           class="btn btn-secondary" 
                                           style="flex: 1; padding: 14px; border-radius: 8px; font-weight: 600; font-size: 15px; background: #6b7280; border: none; text-align: center; color: white;">
                                            <i class="fa fa-arrow-left"></i> Cancelar
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        
                        <!-- Consejos de Seguridad -->
                        <div class="mt-4" style="background: #f9fafb; padding: 20px; border-radius: 12px; border-left: 4px solid #3b82f6;">
                            <h5 style="color: #1f2937; font-weight: 600; margin-bottom: 12px;">
                                <i class="fa fa-shield" style="color: #3b82f6;"></i> Consejos de Seguridad
                            </h5>
                            <ul style="margin: 0; padding-left: 20px; color: #6b7280; line-height: 1.8;">
                                <li>Usa al menos 8 caracteres</li>
                                <li>Combina letras mayúsculas, minúsculas, números y símbolos</li>
                                <li>No uses información personal fácil de adivinar</li>
                                <li>No compartas tu contraseña con nadie</li>
                                <li>Cambia tu contraseña periódicamente</li>
                            </ul>
                        </div>
                        
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

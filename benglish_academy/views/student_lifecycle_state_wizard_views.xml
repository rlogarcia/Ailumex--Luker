<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_student_change_lifecycle_state_wizard_form" model="ir.ui.view">
        <field name="name">benglish.student.change.lifecycle.state.wizard.form</field>
        <field name="model">benglish.student.change.lifecycle.state.wizard</field>
        <field name="arch" type="xml">
            <form string="Cambiar Estado del Estudiante">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-info-circle"/>
                        Seleccione el nuevo estado del estudiante según las transiciones permitidas.
                    </div>
                    <div class="alert alert-warning" role="alert" invisible="hay_transiciones">
                        <i class="fa fa-exclamation-triangle"/>
                        No hay transiciones configuradas para este estado. Contacte al administrador.
                    </div>
                    <div class="alert alert-secondary" role="alert" invisible="not mensaje_confirmacion">
                        <i class="fa fa-check-circle"/>
                        <field name="mensaje_confirmacion" nolabel="1" readonly="1"/>
                    </div>

                    <group>
                        <group string="Información del Estudiante">
                            <field name="student_id" readonly="1"/>
                            <field name="estado_actual" readonly="1"/>
                        </group>
                        <group string="Nuevo Estado">
                            <field name="estado_nuevo" required="1"/>
                            <field name="estados_permitidos" readonly="1"/>
                            <field name="profile_state_id" readonly="1"/>
                        </group>
                    </group>

                    <group invisible="not requiere_motivo">
                        <field name="motivo"
                            placeholder="Explique el motivo del cambio de estado..."
                            required="requiere_motivo"/>
                    </group>

                    <group>
                        <field name="notas" placeholder="Observaciones adicionales (opcional)"/>
                    </group>

                    <footer>
                        <button name="action_confirmar"
                            string="Cambiar Estado"
                            type="object"
                            class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_change_lifecycle_state_wizard" model="ir.actions.act_window">
        <field name="name">Cambiar Estado del Estudiante</field>
        <field name="res_model">benglish.student.change.lifecycle.state.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

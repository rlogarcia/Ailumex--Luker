<odoo>

    <record id="view_student_moodle_list" model="ir.ui.view">
        <field name="name">benglish.student.moodle.list</field>
        <field name="model">student.moodle</field>
        <field name="arch" type="xml">
            <list string="Estudiantes Moodle por cargar">
                <field name="name" />
                <field name="email" />
                <field name="mobile" />
                <field name="code" />
                <field name="moodle_username" />
                <field name="loaded" widget="badge"
                    decoration-success="loaded == 'done'" />
            </list>
        </field>
    </record>

    <record id="view_student_moodle_form" model="ir.ui.view">
        <field name="name">benglish.student.moodle.form</field>
        <field name="model">student.moodle</field>
        <field name="arch" type="xml">
            <form string="Estudiante Moodle">
                <header>
                    <button name="action_create_contact"
                        string="Crear Contacto"
                        type="object"
                        class="btn-primary" />

                    <button name="action_load_student"
                        type="object"
                        string="Cargar en Estudiantes"
                        class="btn-primary" />

                    <field name="loaded" widget="statusbar" statusbar_visible="draft,done"
                        statusbar_status="loaded" />
                </header>

                <sheet>
                    <group>
                        <group string="Datos Personales">
                            <field name="name" />
                            <field name="email" />
                            <field name="mobile" />
                            <field name="code" />
                        </group>

                        <group string="Datos Moodle">
                            <field name="moodle_username" />
                            <field name="moodle_password" password='True' />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_student_moodle_search" model="ir.ui.view">
        <field name="name">benglish.student.moodle.search</field>
        <field name="model">student.moodle</field>
        <field name="arch" type="xml">
            <search string="Buscar Estudiantes Moodle">
                <field name="name" />
                <field name="email" />
                <field name="moodle_username" />

                <filter name="not_loaded"
                    string="Sin cargar"
                    domain="[('loaded','=','draft')]" />
            </search>
        </field>
    </record>


    <record id="action_student_moodle" model="ir.actions.act_window">
        <field name="name">Cargar Estudiantes Moodle</field>
        <field name="res_model">student.moodle</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_loaded': 'draft'}</field>
    </record>


</odoo>
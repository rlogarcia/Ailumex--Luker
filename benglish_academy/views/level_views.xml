                            </div>
                        </group>
                        <group>
                            <group string="ðŸ›ï¸ JerarquÃ­a Curricular">
                                <field name="program_id" readonly="1" />
                            </group>
                            <group string="â° Carga AcadÃ©mica">
                                <field name="duration_weeks" string="DuraciÃ³n (semanas)" />
                                <field name="total_hours" string="Total horas" />
                            </group>
                            <group string="ðŸŽ“ Progreso de Unidades (Oral Tests)">
                                <field name="max_unit"
                                    help="Unidad mÃ¡xima alcanzada al completar este nivel. Ejemplo: 4, 8, 12, 16, 20, 24" />
                            </group>
                        </group>
                        <notebook>
                            <page string="DescripciÃ³n">
                                <field name="description"
                                    placeholder="DescripciÃ³n del nivel acadÃ©mico..." />
                            </page>
                            <!-- <page string="Asignaturas">
                                <field name="subject_ids" context="{'default_level_id': id}">
                                    <list>
                                        <field name="sequence" widget="handle"/>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="subject_type"/>
                                        <field name="hours"/>
                                        <field name="prerequisite_count"/>
                                        <field name="active" widget="boolean_toggle"/>
                                    </list>
                                </field>
                            </page>-->
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Niveles -->
        <record id="view_benglish_level_kanban" model="ir.ui.view">
            <field name="name">benglish.level.kanban</field>
            <field name="model">benglish.level</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name" />
                    <field name="code" />
                    <field name="phase_id" />
                    <field name="duration_weeks" />
                    <field name="total_hours" />
                    <field name="subject_count" />
                    <field name="active" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title" style="display:block;">
                                            <field name="name" />
                                        </strong>
                                        <div style="margin-top: 2px;">
                                            <span class="badge text-bg-success"
                                                style="font-size:13px; color:#fff; display:inline-block;">
                                                <field name="code" />
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <field name="phase_id" />
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge text-bg-primary me-1">
                                            <i class="fa fa-calendar" /> <field name="duration_weeks" />
                                            semanas </span>
                                        <span class="badge text-bg-warning me-1">
                                            <i class="fa fa-clock-o" /> <field name="total_hours" />
                                            horas </span>
                                        <span class="badge text-bg-info">
                                            <i class="fa fa-book-open" /> <field name="subject_count" />
                                            asignaturas </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista de BÃºsqueda de Niveles -->
        <record id="view_benglish_level_search_v2" model="ir.ui.view">
            <field name="name">benglish.level.search.v2</field>
            <field name="model">benglish.level</field>
            <field name="arch" type="xml">
                <search string="Buscar Niveles">
                    <field name="name" string="Nivel"
                        filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" />
                    <field name="code" />
                    <field name="phase_id" />
                    <field name="program_id" />
                    <separator />
                    <filter string="Activos" name="active" domain="[('active', '=', True)]" />
                    <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
                    <group expand="0" string="Agrupar por">
                        <filter string="Fase" name="group_by_phase"
                            context="{'group_by': 'phase_id'}" />
                        <filter string="Programa" name="group_by_program"
                            context="{'group_by': 'program_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- AcciÃ³n de Ventana para Niveles -->
        <record id="action_benglish_level" model="ir.actions.act_window">
            <field name="name">Niveles AcadÃ©micos</field>
            <field name="res_model">benglish.level</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ðŸŽ¯ Crear tu primer Nivel AcadÃ©mico
                </p>
                <p>
                    <strong>Los niveles</strong> agrupan asignaturas dentro de una fase del
                    programa.<br />
                    <em>Ejemplos:</em> Nivel 1 - Beginner, Nivel 2 - Elementary,
                    Nivel 3 - Pre-Intermediate. </p>
            </field>
        </record>
    </data>
</odoo>
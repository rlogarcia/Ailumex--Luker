            <field name="model">benglish.subcampus</field>
            <field name="arch" type="xml">
                <form string="Sub-sede / Aula">
                    <header>
                        <button name="action_mark_available" string="Marcar Disponible"
                            type="object" class="btn-success"
                            invisible="is_available" />
                        <button name="action_mark_unavailable" string="Marcar No Disponible"

          <field name="x_ranking_position"/>
          <field name="x_ranking_total"/>
          <field name="x_ranking_percentile" widget="percentage"/>
        </group>
      </field>
    </field>
  </record>

  <!-- TREE: Vista de ranking de participaciones -->
  <record id="survey_user_input_tree_ranking" model="ir.ui.view">
    <field name="name">survey.user_input.tree.ranking</field>
    <field name="model">survey.user_input</field>
    <field name="priority">20</field>
    <field name="arch" type="xml">
      <list string="Ranking de Participaciones" create="false" edit="false" default_order="scoring_percentage DESC, x_ranking_position ASC" decoration-success="x_ranking_position == 1" decoration-info="x_ranking_position == 2" decoration-warning="x_ranking_position == 3">
        <field name="x_ranking_position" string="Pos."/>
        <field name="x_ranking_medal" string="Medalla" widget="badge" decoration-success="x_ranking_medal == 'gold'" decoration-info="x_ranking_medal == 'silver'" decoration-warning="x_ranking_medal == 'bronze'"/>
